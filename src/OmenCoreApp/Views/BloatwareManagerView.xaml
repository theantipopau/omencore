<UserControl x:Class="OmenCore.Views.BloatwareManagerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:OmenCore.ViewModels"
             xmlns:bloat="clr-namespace:OmenCore.Services.BloatwareManager"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Risk Level Colors -->
        <SolidColorBrush x:Key="RiskLowBrush" Color="#4CAF50"/>
        <SolidColorBrush x:Key="RiskMediumBrush" Color="#FF9800"/>
        <SolidColorBrush x:Key="RiskHighBrush" Color="#F44336"/>
        
        <!-- Category Icons -->
        <Style x:Key="CategoryBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                        <Path Data="{StaticResource IconTrash}" Width="20" Height="20" Fill="{StaticResource AccentBrush}" Stretch="Uniform" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Bloatware Manager" Style="{StaticResource Headline}" VerticalAlignment="Center"/>
                        <Border Background="{StaticResource SurfaceMediumBrush}" CornerRadius="4" Padding="8,3" Margin="12,0,0,0" VerticalAlignment="Center">
                            <TextBlock Text="BETA" FontSize="9" FontWeight="Bold" Foreground="{StaticResource WarningBrush}"/>
                        </Border>
                    </StackPanel>
                    <TextBlock Text="Remove pre-installed bloatware to improve system performance and reduce clutter. Low-risk items are safe to remove." 
                               Style="{StaticResource Caption}" 
                               TextWrapping="Wrap"
                               MaxWidth="600"
                               HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Stats Panel -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Border Background="{StaticResource SurfaceMediumBrush}" CornerRadius="6" Padding="12,8" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="{Binding TotalCount}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="DETECTED" FontSize="9" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource SurfaceMediumBrush}" CornerRadius="6" Padding="12,8" Margin="0,0,8,0">
                        <StackPanel>
                            <TextBlock Text="{Binding RemovedCount}" FontSize="24" FontWeight="Bold" Foreground="{StaticResource AccentBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Text="REMOVED" FontSize="9" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource SurfaceMediumBrush}" CornerRadius="6" Padding="12,8">
                        <StackPanel>
                            <TextBlock Text="{Binding LowRiskCount}" FontSize="24" FontWeight="Bold" Foreground="#4CAF50" HorizontalAlignment="Center"/>
                            <TextBlock Text="LOW RISK" FontSize="9" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Toolbar -->
        <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="0,0,0,16" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" MinWidth="200"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Command="{Binding ScanCommand}" 
                            Style="{StaticResource PrimaryButton}" 
                            Margin="0,0,8,0"
                            Padding="12,6"
                            AutomationProperties.Name="Scan for Bloatware">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconRefresh}" Width="14" Height="14" Fill="White" Stretch="Uniform" Margin="0,0,6,0"/>
                            <TextBlock Text="Scan" FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding RemoveAllLowRiskCommand}" 
                            Style="{StaticResource ModernButton}" 
                            Background="#2E7D32"
                            Margin="0,0,8,0"
                            Padding="10,6"
                            AutomationProperties.Name="Remove All Low-Risk Items">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconTrash}" Width="12" Height="12" Fill="White" Stretch="Uniform" Margin="0,0,4,0"/>
                            <TextBlock Text="Remove Low-Risk" FontSize="11"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Filter/Search -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="8,0">
                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" 
                             MinWidth="150"
                             MaxWidth="250"
                             Margin="0,0,8,0">
                        <TextBox.Style>
                            <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}">
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="  Search..." Foreground="{StaticResource TextTertiaryBrush}" FontSize="12"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <ComboBox ItemsSource="{Binding Categories}" 
                              SelectedItem="{Binding SelectedCategory}"
                              Style="{StaticResource ModernComboBox}"
                              Width="120"
                              DisplayMemberPath="">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <!-- Selected Item Actions -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Command="{Binding RemoveSelectedCommand}" 
                            Style="{StaticResource ModernButton}"
                            Background="#C62828"
                            Margin="0,0,8,0"
                            Padding="10,6"
                            AutomationProperties.Name="Remove Selected Item">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconTrash}" Width="12" Height="12" Fill="White" Stretch="Uniform" Margin="0,0,4,0"/>
                            <TextBlock Text="Remove" FontSize="11"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{Binding RestoreSelectedCommand}" 
                            Style="{StaticResource SecondaryButton}"
                            Padding="10,6"
                            AutomationProperties.Name="Restore Selected Item">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconRestore}" Width="12" Height="12" Fill="{StaticResource TextSecondaryBrush}" Stretch="Uniform" Margin="0,0,4,0"/>
                            <TextBlock Text="Restore" FontSize="11"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- App List -->
        <Border Grid.Row="2" Style="{StaticResource CardBorder}">
            <Grid>
                <!-- Loading Overlay -->
                <Border Background="#80000000" 
                        CornerRadius="8" 
                        Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                        Panel.ZIndex="10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar IsIndeterminate="True" Width="200" Height="4" Margin="0,0,0,12"/>
                        <TextBlock Text="Scanning for bloatware..." 
                                   Foreground="{StaticResource TextPrimaryBrush}" 
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" 
                            HorizontalAlignment="Center"
                            Visibility="{Binding TotalCount, Converter={StaticResource IntZeroToVisibilityConverter}}">
                    <Path Data="{StaticResource IconSearch}" Width="48" Height="48" Fill="{StaticResource TextTertiaryBrush}" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,16"/>
                    <TextBlock Text="No bloatware detected" FontSize="16" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    <TextBlock Text="Click 'Scan System' to search for bloatware" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>

                <!-- App ListView -->
                <ListView ItemsSource="{Binding FilteredApps}" 
                          SelectedItem="{Binding SelectedApp}"
                          Style="{StaticResource ModernListView}"
                          ScrollViewer.IsDeferredScrollingEnabled="True"
                          VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Status" Width="70">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="6,2" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsRemoved}" Value="True">
                                                            <Setter Property="Background" Value="{StaticResource TextTertiaryBrush}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock FontSize="9" FontWeight="Bold" Foreground="White">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Text" Value="ACTIVE"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsRemoved}" Value="True">
                                                                <Setter Property="Text" Value="REMOVED"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Name" Width="200">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" FontWeight="Medium" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Category" Width="120">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="6,2" Background="{StaticResource SurfaceMediumBrush}">
                                            <TextBlock Text="{Binding Category}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Type" Width="100">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Type}" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Risk" Width="80">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border CornerRadius="4" Padding="6,2" HorizontalAlignment="Center">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding RemovalRisk}" Value="Low">
                                                            <Setter Property="Background" Value="#1B5E20"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RemovalRisk}" Value="Medium">
                                                            <Setter Property="Background" Value="#E65100"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding RemovalRisk}" Value="High">
                                                            <Setter Property="Background" Value="#B71C1C"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Text="{Binding RemovalRisk}" FontSize="9" FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Description" Width="300">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Description}" TextTrimming="CharacterEllipsis" Foreground="{StaticResource TextSecondaryBrush}" ToolTip="{Binding Description}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Publisher" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Publisher}" TextTrimming="CharacterEllipsis" Foreground="{StaticResource TextTertiaryBrush}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceDarkBrush}" CornerRadius="0,0,8,8" Padding="12,8" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusMessage}" 
                           Foreground="{StaticResource TextSecondaryBrush}" 
                           FontSize="11"
                           VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Path Data="{StaticResource IconWarning}" Width="12" Height="12" Fill="{StaticResource WarningBrush}" Stretch="Uniform" Margin="0,0,6,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Some removals may require a restart" 
                               Foreground="{StaticResource TextTertiaryBrush}" 
                               FontSize="10"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
