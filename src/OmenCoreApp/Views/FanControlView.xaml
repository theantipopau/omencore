<UserControl x:Class="OmenCore.Views.FanControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Fan &amp; Thermal Control" Style="{StaticResource Heading1}"/>
            <TextBlock Text="Customize fan curves with the visual editor and monitor cooling performance" 
                       Style="{StaticResource Caption}"/>
        </StackPanel>

        <!-- Fan Profile Selection - Unified Interface -->
        <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="FAN PROFILE" 
                           Style="{StaticResource Label}" 
                           Margin="0,0,0,16"/>
                
                <!-- Unified Preset Selection - Single Row with Cards -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Max Cooling -->
                    <RadioButton Grid.Column="0" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsMaxSelected}"
                                 Command="{Binding ApplyMaxCoolingCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 ToolTip="Forces all fans to maximum RPM. Use for heavy gaming or stress tests."
                                 AutomationProperties.Name="Max Cooling Mode"
                                 Margin="0,0,6,0">
                        <StackPanel HorizontalAlignment="Center">
                            <Path Data="{StaticResource IconFire}" Fill="{StaticResource AccentBrush}" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Max" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="100% fans" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Extreme -->
                    <RadioButton Grid.Column="1" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsExtremeSelected}"
                                 Command="{Binding ApplyExtremeModeCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 ToolTip="Maximum cooling for high-power systems (13900HX + 4090). Hits 100% at 75Â°C."
                                 AutomationProperties.Name="Extreme Cooling Mode"
                                 Margin="0,0,6,0">
                        <StackPanel HorizontalAlignment="Center">
                            <Path Data="{StaticResource IconSnowflake}" Fill="#64B5F6" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Extreme" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Max @ 75Â°C" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Gaming -->
                    <RadioButton Grid.Column="2" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsGamingSelected}"
                                 Command="{Binding ApplyGamingModeCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 ToolTip="Aggressive fan curve that ramps up quickly. Good for gaming sessions."
                                 AutomationProperties.Name="Gaming Mode"
                                 Margin="0,0,6,0">
                        <StackPanel HorizontalAlignment="Center">
                            <Path Data="{StaticResource IconGamepad}" Fill="#9C27B0" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Gaming" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Max @ 80Â°C" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Auto -->
                    <RadioButton Grid.Column="3" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsAutoSelected}"
                                 Command="{Binding ApplyAutoModeCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 ToolTip="BIOS-controlled balanced curve. Recommended for everyday use."
                                 AutomationProperties.Name="Auto Mode"
                                 Margin="0,0,6,0">
                        <StackPanel HorizontalAlignment="Center">
                            <Path Data="{StaticResource IconScale}" Fill="#4CAF50" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Auto" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Balanced" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Silent -->
                    <RadioButton Grid.Column="4" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsSilentSelected}"
                                 Command="{Binding ApplyQuietModeCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 ToolTip="Prioritizes quiet operation. Fans stay low until temps rise significantly."
                                 AutomationProperties.Name="Silent Mode"
                                 Margin="0,0,6,0">
                        <StackPanel HorizontalAlignment="Center">
                            <Path Data="{StaticResource IconVolumeMute}" Fill="#607D8B" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Silent" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Quiet" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Custom -->
                    <RadioButton Grid.Column="5" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsCustomSelected}"
                                 Command="{Binding ApplyCustomCurveCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 ToolTip="Apply your custom fan curve defined in the editor below."
                                 AutomationProperties.Name="Custom Curve Mode">
                        <StackPanel HorizontalAlignment="Center">
                            <Path Data="{StaticResource IconTune}" Fill="{StaticResource TextSecondaryBrush}" Width="24" Height="24" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Custom" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Your curve" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                </Grid>
                
                <!-- Current Mode Indicator + Save Custom -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Current Mode Display - compact inline style -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource SurfaceDarkBrush}" 
                            CornerRadius="6" 
                            Padding="12,8"
                            Margin="0,0,12,0"
                            VerticalAlignment="Top">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Active:" 
                                       Style="{StaticResource Caption}" 
                                       FontSize="12"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding CurrentFanModeName}" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}" 
                                       VerticalAlignment="Center"/>
                            <!-- Curve Active Indicator -->
                            <Border Background="#1A4CAF50" 
                                    CornerRadius="4" 
                                    Padding="6,2" 
                                    Margin="12,0,0,0"
                                    Visibility="{Binding IsCurveActive, Converter={StaticResource BoolToVisibility}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”„" FontSize="10" VerticalAlignment="Center" Margin="0,0,4,0"/>
                                    <TextBlock Text="Curve Active" 
                                               FontSize="10" 
                                               Foreground="{StaticResource SuccessBrush}" 
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                    
                    <!-- Spacer -->
                    <Border Grid.Column="1"/>
                    
                    <!-- Save Custom Preset + Fan Transition Settings -->
                    <StackPanel Grid.Column="2" Orientation="Vertical">
                        <!-- Save Custom Preset Row -->
                        <StackPanel Orientation="Horizontal">
                            <TextBox Text="{Binding CustomPresetName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                     Style="{StaticResource ModernTextBox}" 
                                     Width="140"
                                     Height="36"
                                     FontSize="12"
                                     Padding="10,8"
                                     VerticalContentAlignment="Center"
                                     ToolTip="Name for your custom preset"/>
                            <Button Command="{Binding SaveCustomPresetCommand}" 
                                    Style="{StaticResource ModernButton}" 
                                    Height="36"
                                    Padding="12,0"
                                    Margin="8,0,0,0"
                                    ToolTip="Save current curve as a custom preset">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="{StaticResource IconExport}" Width="12" Height="12" Fill="{StaticResource TextPrimaryBrush}" Stretch="Uniform" Margin="0,0,6,0"/>
                                    <TextBlock Text="Save" FontSize="12" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <!-- Fan Transition Settings -->
                        <CheckBox Content="Immediate apply on Save/Apply" 
                                  IsChecked="{Binding ImmediateApplyOnApply, Mode=TwoWay}" 
                                  Margin="0,12,0,0"
                                  ToolTip="When enabled, saving or applying presets will immediately apply the fan changes, bypassing smoothing/hysteresis."/>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Smoothing duration (ms):" VerticalAlignment="Center" Style="{StaticResource Caption}" Width="160" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding SmoothingDurationMs, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="80" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0" VerticalAlignment="Center">
                            <TextBlock Text="Smoothing step (ms):" VerticalAlignment="Center" Style="{StaticResource Caption}" Width="160" Margin="0,0,8,0"/>
                            <TextBox Text="{Binding SmoothingStepMs, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" Width="80" Style="{StaticResource ModernTextBox}"/>
                        </StackPanel>
                        
                        <!-- Independent CPU/GPU Curves Toggle -->
                        <Border Background="{StaticResource SurfaceDarkBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Independent CPU/GPU Curves" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Control each fan based on its respective component temperature" 
                                               Style="{StaticResource Caption}" 
                                               FontSize="10"
                                               TextWrapping="Wrap"
                                               Margin="0,2,8,0"/>
                                </StackPanel>
                                <CheckBox Grid.Column="1" 
                                          IsChecked="{Binding IndependentCurvesEnabled, Mode=TwoWay}" 
                                          VerticalAlignment="Center"
                                          ToolTip="When enabled, you can set separate fan curves for CPU and GPU based on their individual temperatures"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Fan Curve Editor and Telemetry -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="450"/>
                <ColumnDefinition Width="350" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Curve Editor Container - Shows single or dual curves based on mode -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Single Curve Editor (when IndependentCurvesEnabled = false) -->
                <Border Grid.Row="0" 
                        Style="{StaticResource SurfaceCard}" 
                        Padding="20"
                        Visibility="{Binding IndependentCurvesEnabled, Converter={StaticResource InverseBoolToVisibility}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header with instructions -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,16">
                            <Grid>
                                <TextBlock Text="VISUAL CURVE EDITOR" 
                                           Style="{StaticResource Label}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="+ Add" 
                                            Command="{Binding AddCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="70" Height="32"
                                            FontSize="12"
                                            Margin="0,0,6,0"
                                            ToolTip="Add a new curve point (max 10 points)"/>
                                    <Button Content="âˆ’ Remove" 
                                            Command="{Binding RemoveCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="85" Height="32"
                                            FontSize="12"
                                            Margin="0,0,6,0"
                                            ToolTip="Remove the last curve point (min 2 points)"/>
                                    <Button Content="â†º Reset" 
                                            Command="{Binding ResetCurveCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="75" Height="32"
                                            FontSize="12"
                                            ToolTip="Reset curve to default"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Instructions -->
                            <Border Background="#1A2A3A"
                                    BorderBrush="{StaticResource AccentBlueBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸ’¡ How to Use:" 
                                               FontSize="11" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBlueBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Style="{StaticResource Caption}" FontSize="10" TextWrapping="Wrap">
                                        <Run Text="â€¢ Drag points to adjust temperature/fan speed mapping"/>
                                        <LineBreak/>
                                        <Run Text="â€¢ Click empty area to add new points"/>
                                        <LineBreak/>
                                        <Run Text="â€¢ Right-click a point to remove it"/>
                                        <LineBreak/>
                                        <Run Text="â€¢ Blue line shows current temperature (max of CPU/GPU)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Interactive Curve Editor -->
                        <controls:FanCurveEditor Grid.Row="1"
                                                 CurvePoints="{Binding CustomFanCurve}"
                                                 CurrentTemperature="{Binding CurrentTemperature}"
                                                 MinHeight="280"/>
                        
                        <!-- Curve Preview & Validation (v2.7.0) -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource SurfaceDarkBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,16,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Live Preview -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“Š" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Live Preview:" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding CurvePreviewText}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                </StackPanel>
                                
                                <!-- Predicted Fan Speed -->
                                <Border Grid.Column="2" Background="#2000FF88" CornerRadius="4" Padding="12,4">
                                    <TextBlock Text="{Binding PredictedFanPercent, StringFormat='{}{0}%'}" 
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#00FF88"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Curve Validation Message -->
                        <Border Grid.Row="3" 
                                Background="{StaticResource SurfaceDarkBrush}"
                                CornerRadius="6"
                                Padding="8"
                                Margin="0,0,0,8">
                            <TextBlock Text="{Binding CurveValidationMessage}" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Current curve points summary -->
                        <Border Grid.Row="4" 
                                Background="{StaticResource SurfaceDarkBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,16,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Current Points:"
                                           Style="{StaticResource Caption}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                                <ItemsControl Grid.Column="1" ItemsSource="{Binding CustomFanCurve}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceMediumBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    Margin="0,0,8,4">
                                                <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}">
                                                    <Run Text="{Binding TemperatureC, StringFormat='{}{0}Â°'}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <Run Text="â†’"/>
                                                    <Run Text="{Binding FanPercent, StringFormat='{}{0}%'}" Foreground="{StaticResource AccentBrush}"/>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Dual Curve Editors (when IndependentCurvesEnabled = true) -->
                <Grid Grid.Row="0" 
                      Visibility="{Binding IndependentCurvesEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- CPU Fan Curve Editor -->
                    <Border Grid.Row="0" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,0,0,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#1A4A7A" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="CPU" FontSize="11" FontWeight="Bold" Foreground="{StaticResource AccentBlueBrush}"/>
                                    </Border>
                                    <TextBlock Text="FAN CURVE (by CPU temp)" 
                                               Style="{StaticResource Label}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="+" 
                                            Command="{Binding AddCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"/>
                                    <Button Content="âˆ’" 
                                            Command="{Binding RemoveCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"/>
                                    <Button Content="â†º" 
                                            Command="{Binding ResetCurveCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"/>
                                </StackPanel>
                            </Grid>
                            
                            <controls:FanCurveEditor Grid.Row="1"
                                                     CurvePoints="{Binding CustomFanCurve}"
                                                     CurrentTemperature="{Binding CurrentCpuTemperature}"
                                                     MinHeight="140"/>
                            
                            <ItemsControl Grid.Row="2" ItemsSource="{Binding CustomFanCurve}" Margin="0,8,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceMediumBrush}"
                                                CornerRadius="3"
                                                Padding="6,3"
                                                Margin="0,0,6,0">
                                            <TextBlock FontSize="9">
                                                <Run Text="{Binding TemperatureC, StringFormat='{}{0}Â°'}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <Run Text="â†’" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <Run Text="{Binding FanPercent, StringFormat='{}{0}%'}" Foreground="{StaticResource AccentBlueBrush}"/>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                    
                    <!-- GPU Fan Curve Editor -->
                    <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,8,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#1A7A4A" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="GPU" FontSize="11" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                                    </Border>
                                    <TextBlock Text="FAN CURVE (by GPU temp)" 
                                               Style="{StaticResource Label}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="ðŸ“‹" 
                                            Command="{Binding CopyFromCpuCurveCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"
                                            ToolTip="Copy CPU curve to GPU"/>
                                    <Button Content="+" 
                                            Command="{Binding AddGpuCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"/>
                                    <Button Content="âˆ’" 
                                            Command="{Binding RemoveGpuCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"/>
                                    <Button Content="â†º" 
                                            Command="{Binding ResetGpuCurveCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"/>
                                </StackPanel>
                            </Grid>
                            
                            <controls:FanCurveEditor Grid.Row="1"
                                                     CurvePoints="{Binding GpuFanCurve}"
                                                     CurrentTemperature="{Binding CurrentGpuTemperature}"
                                                     MinHeight="140"/>
                            
                            <ItemsControl Grid.Row="2" ItemsSource="{Binding GpuFanCurve}" Margin="0,8,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceMediumBrush}"
                                                CornerRadius="3"
                                                Padding="6,3"
                                                Margin="0,0,6,0">
                                            <TextBlock FontSize="9">
                                                <Run Text="{Binding TemperatureC, StringFormat='{}{0}Â°'}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <Run Text="â†’" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <Run Text="{Binding FanPercent, StringFormat='{}{0}%'}" Foreground="{StaticResource SuccessBrush}"/>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Thermal and Fan Telemetry - Stacked vertically -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Thermal Chart -->
                <Border Grid.Row="0" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="TEMPERATURE HISTORY" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,12"/>
                        <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                               Height="160"/>
                    </StackPanel>
                </Border>

                <!-- Fan Telemetry -->
                <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="REAL-TIME STATUS" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,12"/>
                        <!-- Status ribbon: telemetry timestamp + thermal protection pill -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding LastTelemetryUpdatedText}"
                                       Style="{StaticResource Caption}" 
                                       VerticalAlignment="Center"/>
                            <Border Grid.Column="1"
                                    Background="#1A4CAF50"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Visibility="{Binding ThermalProtectionActive, Converter={StaticResource BoolToVisibility}}"
                                    ToolTip="{Binding ThermalProtectionStatusText}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ›¡ï¸" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock Text="Thermal Protection Active"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource SuccessBrush}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <ItemsControl ItemsSource="{Binding FanTelemetry}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceDarkBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="14,10"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <TextBlock HorizontalAlignment="Left"
                                                           Text="{Binding Name}" 
                                                           FontSize="12" 
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                                           VerticalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DutyCyclePercent, StringFormat='{}{0}%'}" 
                                                               FontSize="13" 
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource AccentBrush}" 
                                                               Margin="0,0,10,0"
                                                               VerticalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding SpeedRpm, StringFormat='{}{0} RPM'}" 
                                                                   FontSize="11" 
                                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        <Border Background="{StaticResource SurfaceMediumBrush}" CornerRadius="4" Padding="6,2" Margin="6,0,0,0">
                                                            <TextBlock Text="{Binding RpmSourceDisplay}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <ProgressBar Grid.Row="1"
                                                         Value="{Binding DutyCyclePercent}" 
                                                         Maximum="100" 
                                                         Height="6" 
                                                         Background="{StaticResource SurfaceMediumBrush}"
                                                         Foreground="{StaticResource AccentBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <controls:LoadingOverlay Grid.RowSpan="3" Panel.ZIndex="1000" />
    </Grid>
</UserControl>
