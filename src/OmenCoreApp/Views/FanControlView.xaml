<UserControl x:Class="OmenCore.Views.FanControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Fan &amp; Thermal Control" Style="{StaticResource Heading1}"/>
            <TextBlock Text="Customize fan curves with the visual editor and monitor cooling performance" 
                       Style="{StaticResource Caption}"/>
        </StackPanel>

        <!-- Fan Profile Selection - Unified Interface -->
        <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0"
                           Text="FAN PROFILE" 
                           Style="{StaticResource Label}" 
                           Margin="0,0,0,16"/>
                
                <!-- Unified Preset Selection - Single Row with Cards -->
                <Grid Grid.Row="1" Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Max Cooling -->
                    <RadioButton Grid.Column="0" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsMaxSelected}"
                                 Command="{Binding ApplyMaxCoolingCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”¥" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Max" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="100% fans" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Gaming -->
                    <RadioButton Grid.Column="1" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsGamingSelected}"
                                 Command="{Binding ApplyGamingModeCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸŽ®" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Gaming" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Aggressive" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Auto -->
                    <RadioButton Grid.Column="2" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsAutoSelected}"
                                 Command="{Binding ApplyAutoModeCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="âš–ï¸" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Auto" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Balanced" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Silent -->
                    <RadioButton Grid.Column="3" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsSilentSelected}"
                                 Command="{Binding ApplyQuietModeCommand}"
                                 Style="{StaticResource PresetCardRadioButton}"
                                 Margin="0,0,8,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ”‡" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Silent" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Quiet" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                    
                    <!-- Custom -->
                    <RadioButton Grid.Column="4" 
                                 GroupName="FanPreset"
                                 IsChecked="{Binding IsCustomSelected}"
                                 Command="{Binding ApplyCustomCurveCommand}"
                                 Style="{StaticResource PresetCardRadioButton}">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="âš™ï¸" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                            <TextBlock Text="Custom" FontSize="13" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Your curve" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </RadioButton>
                </Grid>
                
                <!-- Current Mode Indicator + Save Custom -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Current Mode Display -->
                    <Border Grid.Column="0" 
                            Background="{StaticResource SurfaceDarkBrush}" 
                            CornerRadius="6" 
                            Padding="12,8"
                            Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Active:" 
                                       Style="{StaticResource Caption}" 
                                       FontSize="12"
                                       VerticalAlignment="Center" 
                                       Margin="0,0,8,0"/>
                            <TextBlock Text="{Binding CurrentFanModeName}" 
                                       FontSize="13" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Save Custom Preset -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                        <TextBox Text="{Binding CustomPresetName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Width="140"
                                 Height="36"
                                 FontSize="12"
                                 Padding="10,8"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Name for your custom preset"/>
                        <Button Command="{Binding SaveCustomPresetCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Height="36"
                                Padding="12,0"
                                Margin="8,0,0,0"
                                ToolTip="Save current curve as a custom preset">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconExport}" Width="12" Height="12" Fill="{StaticResource TextPrimaryBrush}" Stretch="Uniform" Margin="0,0,6,0"/>
                                <TextBlock Text="Save" FontSize="12" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Fan Curve Editor and Telemetry -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="450"/>
                <ColumnDefinition Width="350" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Visual Fan Curve Editor -->
            <Border Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header with instructions -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <Grid>
                            <TextBlock Text="VISUAL CURVE EDITOR" 
                                       Style="{StaticResource Label}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="+ Add" 
                                        Command="{Binding AddCurvePointCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Width="70" Height="32"
                                        FontSize="12"
                                        Margin="0,0,6,0"
                                        ToolTip="Add a new curve point (max 10 points)"/>
                                <Button Content="âˆ’ Remove" 
                                        Command="{Binding RemoveCurvePointCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Width="85" Height="32"
                                        FontSize="12"
                                        Margin="0,0,6,0"
                                        ToolTip="Remove the last curve point (min 2 points)"/>
                                <Button Content="â†º Reset" 
                                        Command="{Binding ResetCurveCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Width="75" Height="32"
                                        FontSize="12"
                                        ToolTip="Reset curve to default"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Instructions -->
                        <Border Background="#1A2A3A"
                                BorderBrush="{StaticResource AccentBlueBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ’¡ How to Use:" 
                                           FontSize="11" FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentBlueBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock Style="{StaticResource Caption}" FontSize="10" TextWrapping="Wrap">
                                    <Run Text="â€¢ Drag points to adjust temperature/fan speed mapping"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ Click empty area to add new points"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ Right-click a point to remove it"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ Blue line shows current temperature"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Interactive Curve Editor -->
                    <controls:FanCurveEditor Grid.Row="1"
                                             CurvePoints="{Binding CustomFanCurve}"
                                             CurrentTemperature="{Binding CurrentTemperature}"
                                             MinHeight="280"/>
                    
                    <!-- Current curve points summary -->
                    <Border Grid.Row="2" 
                            Background="{StaticResource SurfaceDarkBrush}"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Current Points:"
                                       Style="{StaticResource Caption}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <ItemsControl Grid.Column="1" ItemsSource="{Binding CustomFanCurve}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceMediumBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Margin="0,0,8,4">
                                            <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="{Binding TemperatureC, StringFormat='{}{0}Â°'}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <Run Text="â†’"/>
                                                <Run Text="{Binding FanPercent, StringFormat='{}{0}%'}" Foreground="{StaticResource AccentBrush}"/>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Thermal and Fan Telemetry - Stacked vertically -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Thermal Chart -->
                <Border Grid.Row="0" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="TEMPERATURE HISTORY" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,12"/>
                        <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                               Height="160"/>
                    </StackPanel>
                </Border>

                <!-- Fan Telemetry -->
                <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="REAL-TIME STATUS" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,12"/>
                        
                        <ItemsControl ItemsSource="{Binding FanTelemetry}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceDarkBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="14,10"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <TextBlock HorizontalAlignment="Left"
                                                           Text="{Binding Name}" 
                                                           FontSize="12" 
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                                           VerticalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DutyCyclePercent, StringFormat='{}{0}%'}" 
                                                               FontSize="13" 
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource AccentBrush}" 
                                                               Margin="0,0,10,0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding SpeedRpm, StringFormat='{}{0} RPM'}" 
                                                               FontSize="11" 
                                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <ProgressBar Grid.Row="1"
                                                         Value="{Binding DutyCyclePercent}" 
                                                         Maximum="100" 
                                                         Height="6" 
                                                         Background="{StaticResource SurfaceMediumBrush}"
                                                         Foreground="{StaticResource AccentBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <controls:LoadingOverlay Grid.RowSpan="3" Panel.ZIndex="1000" />
    </Grid>
</UserControl>
