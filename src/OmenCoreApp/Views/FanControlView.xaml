<UserControl x:Class="OmenCore.Views.FanControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1100">
    
    <UserControl.Resources>
        <!-- Fan Preset Card Style -->
        <Style x:Key="FanPresetCard" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="CardBorder" 
                                Background="#141418" 
                                CornerRadius="10" 
                                Padding="12,14"
                                BorderThickness="2"
                                BorderBrush="Transparent"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1E"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Compact Settings Label -->
        <Style x:Key="SettingsLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{StaticResource TextTertiaryBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Compact Header -->
        <Border Grid.Row="0" Margin="0,0,0,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="FAN &amp; THERMAL CONTROL" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                    <TextBlock Text="Customize fan curves and monitor cooling performance" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                </StackPanel>
                
                <!-- Active Mode Badge -->
                <Border Grid.Column="1" Background="#1A1A1E" CornerRadius="20" Padding="14,8" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreenBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding CurrentFanModeName}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                        <Border Background="#1A4CAF50" CornerRadius="4" Padding="6,2" Margin="10,0,0,0"
                                Visibility="{Binding IsCurveActive, Converter={StaticResource BoolToVisibility}}">
                            <TextBlock Text="CURVE ACTIVE" FontSize="9" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Fan Profile Selection - Redesigned -->
        <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,0,16">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Section Header -->
                <Border Grid.Row="0" Background="#0D0D0F" CornerRadius="8" Padding="14,10" Margin="0,0,0,16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock Text="ðŸŒ€" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="FAN PROFILES" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Column="2" Text="Select a preset or create custom curve" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
                
                <!-- Preset Cards Grid - 6 columns -->
                <UniformGrid Grid.Row="1" Rows="1" Columns="6" Margin="0,0,0,16">
                    <!-- Max Cooling -->
                    <RadioButton GroupName="FanPreset"
                                 IsChecked="{Binding IsMaxSelected}"
                                 Command="{Binding ApplyMaxCoolingCommand}"
                                 Style="{StaticResource FanPresetCard}"
                                 ToolTip="Forces all fans to maximum RPM. Use for heavy gaming or stress tests."
                                 Margin="0,0,6,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Border Grid.Row="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,0,8" HorizontalAlignment="Center">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#30FF4444" Offset="0"/>
                                        <GradientStop Color="#00FF4444" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Path Data="{StaticResource IconFire}" Fill="#FF4444" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Grid.Row="1" Text="Max" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Text="100%" FontSize="9" FontWeight="SemiBold" Foreground="#FF4444" HorizontalAlignment="Center" Margin="0,2,0,6"/>
                            
                            <Border Grid.Row="3" Background="#20FF4444" CornerRadius="4" Padding="6,2" HorizontalAlignment="Center"
                                    Visibility="{Binding IsMaxSelected, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="âœ“" FontSize="10" FontWeight="Bold" Foreground="#FF4444"/>
                            </Border>
                        </Grid>
                    </RadioButton>
                    
                    <!-- Extreme -->
                    <RadioButton GroupName="FanPreset"
                                 IsChecked="{Binding IsExtremeSelected}"
                                 Command="{Binding ApplyExtremeModeCommand}"
                                 Style="{StaticResource FanPresetCard}"
                                 ToolTip="Maximum cooling for high-power systems (13900HX + 4090). Hits 100% at 75Â°C."
                                 Margin="3,0,3,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Border Grid.Row="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,0,8" HorizontalAlignment="Center">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#3064B5F6" Offset="0"/>
                                        <GradientStop Color="#0064B5F6" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Path Data="{StaticResource IconSnowflake}" Fill="#64B5F6" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Grid.Row="1" Text="Extreme" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Text="@75Â°C" FontSize="9" FontWeight="SemiBold" Foreground="#64B5F6" HorizontalAlignment="Center" Margin="0,2,0,6"/>
                            
                            <Border Grid.Row="3" Background="#2064B5F6" CornerRadius="4" Padding="6,2" HorizontalAlignment="Center"
                                    Visibility="{Binding IsExtremeSelected, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="âœ“" FontSize="10" FontWeight="Bold" Foreground="#64B5F6"/>
                            </Border>
                        </Grid>
                    </RadioButton>
                    
                    <!-- Gaming -->
                    <RadioButton GroupName="FanPreset"
                                 IsChecked="{Binding IsGamingSelected}"
                                 Command="{Binding ApplyGamingModeCommand}"
                                 Style="{StaticResource FanPresetCard}"
                                 ToolTip="Aggressive fan curve that ramps up quickly. Good for gaming sessions."
                                 Margin="3,0,3,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Border Grid.Row="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,0,8" HorizontalAlignment="Center">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#309C27B0" Offset="0"/>
                                        <GradientStop Color="#009C27B0" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Path Data="{StaticResource IconGamepad}" Fill="#9C27B0" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Grid.Row="1" Text="Gaming" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Text="@80Â°C" FontSize="9" FontWeight="SemiBold" Foreground="#9C27B0" HorizontalAlignment="Center" Margin="0,2,0,6"/>
                            
                            <Border Grid.Row="3" Background="#209C27B0" CornerRadius="4" Padding="6,2" HorizontalAlignment="Center"
                                    Visibility="{Binding IsGamingSelected, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="âœ“" FontSize="10" FontWeight="Bold" Foreground="#9C27B0"/>
                            </Border>
                        </Grid>
                    </RadioButton>
                    
                    <!-- Auto -->
                    <RadioButton GroupName="FanPreset"
                                 IsChecked="{Binding IsAutoSelected}"
                                 Command="{Binding ApplyAutoModeCommand}"
                                 Style="{StaticResource FanPresetCard}"
                                 ToolTip="BIOS-controlled balanced curve. Recommended for everyday use."
                                 Margin="3,0,3,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Border Grid.Row="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,0,8" HorizontalAlignment="Center">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#304CAF50" Offset="0"/>
                                        <GradientStop Color="#004CAF50" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Path Data="{StaticResource IconScale}" Fill="#4CAF50" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Grid.Row="1" Text="Auto" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Text="BIOS" FontSize="9" FontWeight="SemiBold" Foreground="#4CAF50" HorizontalAlignment="Center" Margin="0,2,0,6"/>
                            
                            <Border Grid.Row="3" Background="#204CAF50" CornerRadius="4" Padding="6,2" HorizontalAlignment="Center"
                                    Visibility="{Binding IsAutoSelected, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="âœ“" FontSize="10" FontWeight="Bold" Foreground="#4CAF50"/>
                            </Border>
                        </Grid>
                    </RadioButton>
                    
                    <!-- Silent -->
                    <RadioButton GroupName="FanPreset"
                                 IsChecked="{Binding IsSilentSelected}"
                                 Command="{Binding ApplyQuietModeCommand}"
                                 Style="{StaticResource FanPresetCard}"
                                 ToolTip="Prioritizes quiet operation. Fans stay low until temps rise significantly."
                                 Margin="3,0,3,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Border Grid.Row="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,0,8" HorizontalAlignment="Center">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#30607D8B" Offset="0"/>
                                        <GradientStop Color="#00607D8B" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Path Data="{StaticResource IconVolumeMute}" Fill="#607D8B" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Grid.Row="1" Text="Silent" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Text="Quiet" FontSize="9" FontWeight="SemiBold" Foreground="#607D8B" HorizontalAlignment="Center" Margin="0,2,0,6"/>
                            
                            <Border Grid.Row="3" Background="#20607D8B" CornerRadius="4" Padding="6,2" HorizontalAlignment="Center"
                                    Visibility="{Binding IsSilentSelected, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="âœ“" FontSize="10" FontWeight="Bold" Foreground="#607D8B"/>
                            </Border>
                        </Grid>
                    </RadioButton>
                    
                    <!-- Custom -->
                    <RadioButton GroupName="FanPreset"
                                 IsChecked="{Binding IsCustomSelected}"
                                 Command="{Binding ApplyCustomCurveCommand}"
                                 Style="{StaticResource FanPresetCard}"
                                 ToolTip="Apply your custom fan curve defined in the editor below."
                                 Margin="6,0,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Border Grid.Row="0" Width="40" Height="40" CornerRadius="20" Margin="0,0,0,8" HorizontalAlignment="Center">
                                <Border.Background>
                                    <RadialGradientBrush>
                                        <GradientStop Color="#30FF6B35" Offset="0"/>
                                        <GradientStop Color="#00FF6B35" Offset="1"/>
                                    </RadialGradientBrush>
                                </Border.Background>
                                <Path Data="{StaticResource IconTune}" Fill="#FF6B35" Width="20" Height="20" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            
                            <TextBlock Grid.Row="1" Text="Custom" FontSize="13" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Row="2" Text="Editor" FontSize="9" FontWeight="SemiBold" Foreground="#FF6B35" HorizontalAlignment="Center" Margin="0,2,0,6"/>
                            
                            <Border Grid.Row="3" Background="#20FF6B35" CornerRadius="4" Padding="6,2" HorizontalAlignment="Center"
                                    Visibility="{Binding IsCustomSelected, Converter={StaticResource BoolToVisibility}}">
                                <TextBlock Text="âœ“" FontSize="10" FontWeight="Bold" Foreground="#FF6B35"/>
                            </Border>
                        </Grid>
                    </RadioButton>
                </UniformGrid>
                
                <!-- Settings Row - Compact horizontal layout -->
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Save Custom Preset -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <TextBox Text="{Binding CustomPresetName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                 Style="{StaticResource ModernTextBox}" 
                                 Width="130" Height="28" FontSize="10" Padding="6,4"
                                 VerticalContentAlignment="Center"
                                 ToolTip="Name for your custom preset"/>
                        <Button Command="{Binding SaveCustomPresetCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Height="28" Padding="8,0" Margin="6,0,0,0"
                                ToolTip="Save current curve as a custom preset">
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource IconExport}" Width="10" Height="10" Fill="{StaticResource TextPrimaryBrush}" Stretch="Uniform" Margin="0,0,4,0"/>
                                <TextBlock Text="Save" FontSize="10"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    
                    <!-- Saved Presets: Load / Delete / Import / Export -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="12,0">
                        <TextBlock Text="Saved:" FontSize="10" VerticalAlignment="Center" Margin="0,0,6,0"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox ItemsSource="{Binding SavedCustomPresets}" 
                                  SelectedItem="{Binding SelectedPreset}"
                                  DisplayMemberPath="Name"
                                  Width="130" Height="28" FontSize="10"
                                  ToolTip="Select a saved custom preset to load"/>
                        <Button Command="{Binding DeleteSelectedPresetCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Height="28" Padding="6,0" Margin="4,0,0,0"
                                ToolTip="Delete the selected custom preset">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="10"/>
                        </Button>
                        <Button Command="{Binding ImportPresetsCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Height="28" Padding="6,0" Margin="8,0,0,0"
                                ToolTip="Import presets from a JSON file">
                            <TextBlock Text="Import" FontSize="10"/>
                        </Button>
                        <Button Command="{Binding ExportPresetsCommand}" 
                                Style="{StaticResource ModernButton}" 
                                Height="28" Padding="6,0" Margin="4,0,0,0"
                                ToolTip="Export presets to a JSON file">
                            <TextBlock Text="Export" FontSize="10"/>
                        </Button>
                    </StackPanel>
                    
                    <!-- Advanced Settings - Compact -->
                    <Border Grid.Column="2" Background="#0D0D0F" CornerRadius="8" Padding="12,8">
                        <StackPanel Orientation="Horizontal">
                            <!-- Immediate Apply -->
                            <CheckBox Content="Instant apply" 
                                      IsChecked="{Binding ImmediateApplyOnApply, Mode=TwoWay}" 
                                      FontSize="11"
                                      ToolTip="Bypass smoothing on Save/Apply"/>
                            
                            <Border Width="1" Background="#333" Margin="12,0"/>
                            
                            <!-- Smoothing Duration -->
                            <TextBlock Text="Smoothing:" Style="{StaticResource SettingsLabel}" Margin="0,0,6,0"/>
                            <TextBox Text="{Binding SmoothingDurationMs, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                     Width="50" Height="24" Style="{StaticResource ModernTextBox}" FontSize="10" Padding="4,2"/>
                            <TextBlock Text="ms" Style="{StaticResource SettingsLabel}" Margin="4,0,12,0"/>
                            
                            <!-- Step -->
                            <TextBlock Text="Step:" Style="{StaticResource SettingsLabel}" Margin="0,0,6,0"/>
                            <TextBox Text="{Binding SmoothingStepMs, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                                     Width="50" Height="24" Style="{StaticResource ModernTextBox}" FontSize="10" Padding="4,2"/>
                            <TextBlock Text="ms" Style="{StaticResource SettingsLabel}" Margin="4,0,12,0"/>
                            
                            <Border Width="1" Background="#333" Margin="0,0,12,0"/>
                            
                            <!-- Independent Curves Toggle -->
                            <CheckBox Content="Independent CPU/GPU" 
                                      IsChecked="{Binding IndependentCurvesEnabled, Mode=TwoWay}" 
                                      FontSize="11"
                                      ToolTip="Control each fan based on its respective component temperature"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>

        <!-- Fan Curve Editor and Telemetry -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="450"/>
                <ColumnDefinition Width="350" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Curve Editor Container - Shows single or dual curves based on mode -->
            <Grid Grid.Column="0" Margin="0,0,16,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Single Curve Editor (when IndependentCurvesEnabled = false) -->
                <Border Grid.Row="0" 
                        Style="{StaticResource SurfaceCard}" 
                        Padding="20"
                        Visibility="{Binding IndependentCurvesEnabled, Converter={StaticResource InverseBoolToVisibility}}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header with instructions -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,16">
                            <Grid>
                                <TextBlock Text="VISUAL CURVE EDITOR" 
                                           Style="{StaticResource Label}"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="+ Add" 
                                            Command="{Binding AddCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="70" Height="32"
                                            FontSize="12"
                                            Margin="0,0,6,0"
                                            ToolTip="Add a new curve point (max 10 points)"/>
                                    <Button Content="âˆ’ Remove" 
                                            Command="{Binding RemoveCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="85" Height="32"
                                            FontSize="12"
                                            Margin="0,0,6,0"
                                            ToolTip="Remove the last curve point (min 2 points)"/>
                                    <Button Content="â†º Reset" 
                                            Command="{Binding ResetCurveCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="75" Height="32"
                                            FontSize="12"
                                            ToolTip="Reset curve to default"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Instructions -->
                            <Border Background="#1A2A3A"
                                    BorderBrush="{StaticResource AccentBlueBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="12"
                                    Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="ðŸ’¡ How to Use:" 
                                               FontSize="11" FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBlueBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Style="{StaticResource Caption}" FontSize="10" TextWrapping="Wrap">
                                        <Run Text="â€¢ Drag points to adjust temperature/fan speed mapping"/>
                                        <LineBreak/>
                                        <Run Text="â€¢ Click empty area to add new points"/>
                                        <LineBreak/>
                                        <Run Text="â€¢ Right-click a point to remove it"/>
                                        <LineBreak/>
                                        <Run Text="â€¢ Blue line shows current temperature (max of CPU/GPU)"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                        
                        <!-- Interactive Curve Editor -->
                        <controls:FanCurveEditor Grid.Row="1"
                                                 CurvePoints="{Binding CustomFanCurve}"
                                                 CurrentTemperature="{Binding CurrentTemperature}"
                                                 MinHeight="280"/>
                        
                        <!-- Curve Preview & Validation (v2.7.0) -->
                        <Border Grid.Row="2" 
                                Background="{StaticResource SurfaceDarkBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,16,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Live Preview -->
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“Š" FontSize="14" Margin="0,0,6,0"/>
                                    <TextBlock Text="Live Preview:" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding CurvePreviewText}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource AccentBrush}"/>
                                </StackPanel>
                                
                                <!-- Predicted Fan Speed (after safety clamping) -->
                                <Border Grid.Column="2" Background="#2000FF88" CornerRadius="4" Padding="12,4">
                                    <TextBlock Text="{Binding EffectiveFanPercent, StringFormat='{}{0}%'}" 
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#00FF88"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Curve Validation Message -->
                        <Border Grid.Row="3" 
                                Background="{StaticResource SurfaceDarkBrush}"
                                CornerRadius="6"
                                Padding="8"
                                Margin="0,0,0,8">
                            <TextBlock Text="{Binding CurveValidationMessage}" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextWrapping="Wrap"/>
                        </Border>
                        
                        <!-- Current curve points summary -->
                        <Border Grid.Row="4" 
                                Background="{StaticResource SurfaceDarkBrush}"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,16,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="Current Points:"
                                           Style="{StaticResource Caption}"
                                           FontSize="11"
                                           FontWeight="SemiBold"
                                           VerticalAlignment="Center"
                                           Margin="0,0,12,0"/>
                                <ItemsControl Grid.Column="1" ItemsSource="{Binding CustomFanCurve}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{StaticResource SurfaceMediumBrush}"
                                                    CornerRadius="4"
                                                    Padding="8,4"
                                                    Margin="0,0,8,4">
                                                <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}">
                                                    <Run Text="{Binding TemperatureC, StringFormat='{}{0}Â°'}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                    <Run Text="â†’"/>
                                                    <Run Text="{Binding FanPercent, StringFormat='{}{0}%'}" Foreground="{StaticResource AccentBrush}"/>
                                                </TextBlock>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                
                <!-- Dual Curve Editors (when IndependentCurvesEnabled = true) -->
                <Grid Grid.Row="0" 
                      Visibility="{Binding IndependentCurvesEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- CPU Fan Curve Editor -->
                    <Border Grid.Row="0" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,0,0,8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#1A4A7A" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="CPU" FontSize="11" FontWeight="Bold" Foreground="{StaticResource AccentBlueBrush}"/>
                                    </Border>
                                    <TextBlock Text="FAN CURVE (by CPU temp)" 
                                               Style="{StaticResource Label}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="+" 
                                            Command="{Binding AddCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"/>
                                    <Button Content="âˆ’" 
                                            Command="{Binding RemoveCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"/>
                                    <Button Content="â†º" 
                                            Command="{Binding ResetCurveCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"/>
                                </StackPanel>
                            </Grid>
                            
                            <controls:FanCurveEditor Grid.Row="1"
                                                     CurvePoints="{Binding CustomFanCurve}"
                                                     CurrentTemperature="{Binding CurrentCpuTemperature}"
                                                     MinHeight="140"/>
                            
                            <ItemsControl Grid.Row="2" ItemsSource="{Binding CustomFanCurve}" Margin="0,8,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceMediumBrush}"
                                                CornerRadius="3"
                                                Padding="6,3"
                                                Margin="0,0,6,0">
                                            <TextBlock FontSize="9">
                                                <Run Text="{Binding TemperatureC, StringFormat='{}{0}Â°'}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <Run Text="â†’" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <Run Text="{Binding FanPercent, StringFormat='{}{0}%'}" Foreground="{StaticResource AccentBlueBrush}"/>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                    
                    <!-- GPU Fan Curve Editor -->
                    <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,8,0,0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal">
                                    <Border Background="#1A7A4A" CornerRadius="4" Padding="8,4" Margin="0,0,8,0">
                                        <TextBlock Text="GPU" FontSize="11" FontWeight="Bold" Foreground="{StaticResource SuccessBrush}"/>
                                    </Border>
                                    <TextBlock Text="FAN CURVE (by GPU temp)" 
                                               Style="{StaticResource Label}"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="ðŸ“‹" 
                                            Command="{Binding CopyFromCpuCurveCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"
                                            ToolTip="Copy CPU curve to GPU"/>
                                    <Button Content="+" 
                                            Command="{Binding AddGpuCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"/>
                                    <Button Content="âˆ’" 
                                            Command="{Binding RemoveGpuCurvePointCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"
                                            Margin="0,0,4,0"/>
                                    <Button Content="â†º" 
                                            Command="{Binding ResetGpuCurveCommand}"
                                            Style="{StaticResource SecondaryButton}"
                                            Width="32" Height="28"
                                            FontSize="12"/>
                                </StackPanel>
                            </Grid>
                            
                            <controls:FanCurveEditor Grid.Row="1"
                                                     CurvePoints="{Binding GpuFanCurve}"
                                                     CurrentTemperature="{Binding CurrentGpuTemperature}"
                                                     MinHeight="140"/>
                            
                            <ItemsControl Grid.Row="2" ItemsSource="{Binding GpuFanCurve}" Margin="0,8,0,0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceMediumBrush}"
                                                CornerRadius="3"
                                                Padding="6,3"
                                                Margin="0,0,6,0">
                                            <TextBlock FontSize="9">
                                                <Run Text="{Binding TemperatureC, StringFormat='{}{0}Â°'}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <Run Text="â†’" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                <Run Text="{Binding FanPercent, StringFormat='{}{0}%'}" Foreground="{StaticResource SuccessBrush}"/>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Thermal and Fan Telemetry - Stacked vertically -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Thermal Chart -->
                <Border Grid.Row="0" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="TEMPERATURE HISTORY" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,12"/>
                        <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                               Height="160"/>
                    </StackPanel>
                </Border>

                <!-- Fan Telemetry -->
                <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="REAL-TIME STATUS" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,12"/>
                        <!-- Status ribbon: telemetry timestamp + thermal protection pill -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding LastTelemetryUpdatedText}"
                                       Style="{StaticResource Caption}" 
                                       VerticalAlignment="Center"/>
                            <Border Grid.Column="1"
                                    Background="#1A4CAF50"
                                    BorderBrush="{StaticResource BorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Padding="8,4"
                                    Visibility="{Binding ThermalProtectionActive, Converter={StaticResource BoolToVisibility}}"
                                    ToolTip="{Binding ThermalProtectionStatusText}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ðŸ›¡ï¸" FontSize="12" Margin="0,0,6,0"/>
                                    <TextBlock Text="Thermal Protection Active"
                                               FontSize="11"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource SuccessBrush}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                        
                        <ItemsControl ItemsSource="{Binding FanTelemetry}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceDarkBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="14,10"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <TextBlock HorizontalAlignment="Left"
                                                           Text="{Binding Name}" 
                                                           FontSize="12" 
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                                           VerticalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DutyCyclePercent, StringFormat='{}{0}%'}" 
                                                               FontSize="13" 
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource AccentBrush}" 
                                                               Margin="0,0,10,0"
                                                               VerticalAlignment="Center"/>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding SpeedRpm, StringFormat='{}{0} RPM'}" 
                                                                   FontSize="11" 
                                                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        <Border Background="{StaticResource SurfaceMediumBrush}" CornerRadius="4" Padding="6,2" Margin="6,0,0,0">
                                                            <TextBlock Text="{Binding RpmSourceDisplay}" FontSize="10" Foreground="{StaticResource TextSecondaryBrush}"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <ProgressBar Grid.Row="1"
                                                         Value="{Binding DutyCyclePercent}" 
                                                         Maximum="100" 
                                                         Height="6" 
                                                         Background="{StaticResource SurfaceMediumBrush}"
                                                         Foreground="{StaticResource AccentBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <controls:LoadingOverlay Grid.RowSpan="3" Panel.ZIndex="1000" />
    </Grid>
</UserControl>
