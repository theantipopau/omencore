<UserControl x:Class="OmenCore.Views.FanControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Fan &amp; Thermal Control" Style="{StaticResource Heading1}"/>
            <TextBlock Text="Customize fan curves with the visual editor and monitor cooling performance" 
                       Style="{StaticResource Caption}"/>
        </StackPanel>

        <!-- Fan Preset Selection -->
        <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"
                           Text="FAN PROFILES" 
                           Style="{StaticResource Label}" 
                           Margin="0,0,0,16"/>
                
                <!-- Quick Preset Buttons -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,20">
                    <TextBlock Text="Quick Presets:" 
                               Style="{StaticResource Caption}" 
                               FontSize="13"
                               VerticalAlignment="Center" 
                               Margin="0,0,16,0"/>
                    <Button Content="ðŸ”¥ Max" 
                            Command="{Binding ApplyMaxCoolingCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="90" Height="36" 
                            Margin="0,0,8,0"
                            ToolTip="100% fan speed - Use for benchmarks or extreme cooling needs"/>
                    <Button Content="ðŸŽ® Gaming" 
                            Command="{Binding ApplyGamingModeCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="100" Height="36" 
                            Margin="0,0,8,0"
                            ToolTip="Aggressive cooling for gaming - Fans ramp up quickly at 60Â°C+"/>
                    <Button Content="âš–ï¸ Auto" 
                            Command="{Binding ApplyAutoModeCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="90" Height="36" 
                            Margin="0,0,8,0"
                            ToolTip="BIOS default thermal policy - May be too conservative on some models"/>
                    <Button Content="ðŸ”‡ Silent" 
                            Command="{Binding ApplyQuietModeCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="90" Height="36"
                            ToolTip="Low fan speeds for quiet operation - May allow higher temps"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Choose Preset" 
                               Style="{StaticResource Caption}"
                               FontSize="13"
                               Margin="0,0,0,10"/>
                    <ComboBox ItemsSource="{Binding FanPresets}" 
                              SelectedItem="{Binding SelectedPreset}" 
                              DisplayMemberPath="Name"
                              Style="{StaticResource ModernComboBox}" 
                              Height="42"/>
                </StackPanel>

                <StackPanel Grid.Row="2" Grid.Column="1">
                    <TextBlock Text="New Preset Name" 
                               Style="{StaticResource Caption}"
                               FontSize="13"
                               Margin="0,0,0,10"/>
                    <TextBox Text="{Binding CustomPresetName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" 
                             Style="{StaticResource ModernTextBox}" 
                             Height="42"
                             FontSize="14"
                             Padding="12,10"
                             IsReadOnly="False"
                             Focusable="True"
                             AcceptsReturn="False"
                             VerticalContentAlignment="Center"
                             ToolTip="Enter a name to save your custom fan curve"/>
                </StackPanel>

                <StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,20,0,0">
                    <Button Content="Apply Curve" 
                            Command="{Binding ApplyCustomCurveCommand}" 
                            Style="{StaticResource SecondaryButton}" 
                            Width="140" Height="38" Margin="0,0,12,0"/>
                    <Button Command="{Binding SaveCustomPresetCommand}" 
                            Style="{StaticResource ModernButton}" 
                            Width="150" Height="38">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconExport}" Width="14" Height="14" Fill="{StaticResource TextPrimaryBrush}" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="Save Preset" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Fan Curve Editor and Telemetry -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="450"/>
                <ColumnDefinition Width="350" MinWidth="300"/>
            </Grid.ColumnDefinitions>

            <!-- Visual Fan Curve Editor -->
            <Border Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Header with instructions -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,16">
                        <Grid>
                            <TextBlock Text="VISUAL CURVE EDITOR" 
                                       Style="{StaticResource Label}"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="+ Add" 
                                        Command="{Binding AddCurvePointCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Width="70" Height="32"
                                        FontSize="12"
                                        Margin="0,0,6,0"
                                        ToolTip="Add a new curve point (max 10 points)"/>
                                <Button Content="âˆ’ Remove" 
                                        Command="{Binding RemoveCurvePointCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Width="85" Height="32"
                                        FontSize="12"
                                        Margin="0,0,6,0"
                                        ToolTip="Remove the last curve point (min 2 points)"/>
                                <Button Content="â†º Reset" 
                                        Command="{Binding ResetCurveCommand}"
                                        Style="{StaticResource SecondaryButton}"
                                        Width="75" Height="32"
                                        FontSize="12"
                                        ToolTip="Reset curve to default"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Instructions -->
                        <Border Background="#1A2A3A"
                                BorderBrush="{StaticResource AccentBlueBrush}"
                                BorderThickness="1"
                                CornerRadius="6"
                                Padding="12"
                                Margin="0,12,0,0">
                            <StackPanel>
                                <TextBlock Text="ðŸ’¡ How to Use:" 
                                           FontSize="11" FontWeight="SemiBold"
                                           Foreground="{StaticResource AccentBlueBrush}"
                                           Margin="0,0,0,4"/>
                                <TextBlock Style="{StaticResource Caption}" FontSize="10" TextWrapping="Wrap">
                                    <Run Text="â€¢ Drag points to adjust temperature/fan speed mapping"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ Click empty area to add new points"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ Right-click a point to remove it"/>
                                    <LineBreak/>
                                    <Run Text="â€¢ Blue line shows current temperature"/>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                    
                    <!-- Interactive Curve Editor -->
                    <controls:FanCurveEditor Grid.Row="1"
                                             CurvePoints="{Binding CustomFanCurve}"
                                             CurrentTemperature="{Binding CurrentTemperature}"
                                             MinHeight="280"/>
                    
                    <!-- Current curve points summary -->
                    <Border Grid.Row="2" 
                            Background="{StaticResource SurfaceDarkBrush}"
                            CornerRadius="6"
                            Padding="12"
                            Margin="0,16,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0"
                                       Text="Current Points:"
                                       Style="{StaticResource Caption}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"
                                       Margin="0,0,12,0"/>
                            <ItemsControl Grid.Column="1" ItemsSource="{Binding CustomFanCurve}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceMediumBrush}"
                                                CornerRadius="4"
                                                Padding="8,4"
                                                Margin="0,0,8,4">
                                            <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}">
                                                <Run Text="{Binding TemperatureC, StringFormat='{}{0}Â°'}" Foreground="{StaticResource TextPrimaryBrush}"/>
                                                <Run Text="â†’"/>
                                                <Run Text="{Binding FanPercent, StringFormat='{}{0}%'}" Foreground="{StaticResource AccentBrush}"/>
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Thermal and Fan Telemetry - Stacked vertically -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Thermal Chart -->
                <Border Grid.Row="0" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,0,0,8">
                    <StackPanel>
                        <TextBlock Text="TEMPERATURE HISTORY" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,12"/>
                        <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                               Height="160"/>
                    </StackPanel>
                </Border>

                <!-- Fan Telemetry -->
                <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="REAL-TIME STATUS" 
                                   Style="{StaticResource Label}" 
                                   Margin="0,0,0,12"/>
                        
                        <ItemsControl ItemsSource="{Binding FanTelemetry}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource SurfaceDarkBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Padding="14,10"
                                            Margin="0,0,0,10">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Grid Grid.Row="0" Margin="0,0,0,8">
                                                <TextBlock HorizontalAlignment="Left"
                                                           Text="{Binding Name}" 
                                                           FontSize="12" 
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}" 
                                                           VerticalAlignment="Center"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                                    <TextBlock Text="{Binding DutyCyclePercent, StringFormat='{}{0}%'}" 
                                                               FontSize="13" 
                                                               FontWeight="Bold"
                                                               Foreground="{StaticResource AccentBrush}" 
                                                               Margin="0,0,10,0"
                                                               VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding SpeedRpm, StringFormat='{}{0} RPM'}" 
                                                               FontSize="11" 
                                                               Foreground="{StaticResource TextSecondaryBrush}" 
                                                               VerticalAlignment="Center"/>
                                                </StackPanel>
                                            </Grid>
                                            
                                            <ProgressBar Grid.Row="1"
                                                         Value="{Binding DutyCyclePercent}" 
                                                         Maximum="100" 
                                                         Height="6" 
                                                         Background="{StaticResource SurfaceMediumBrush}"
                                                         Foreground="{StaticResource AccentBrush}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
        
        <!-- Loading Overlay -->
        <controls:LoadingOverlay Grid.RowSpan="3" Panel.ZIndex="1000" />
    </Grid>
</UserControl>
