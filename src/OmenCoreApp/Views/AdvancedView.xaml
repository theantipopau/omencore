<UserControl x:Class="OmenCore.Views.AdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:OmenCore.Controls"
             xmlns:utils="clr-namespace:OmenCore.Utils"
             xmlns:views="clr-namespace:OmenCore.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Performance Mode Card Style -->
        <Style x:Key="PerformanceModeCard" TargetType="RadioButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="CardBorder" 
                                Background="#141418" 
                                CornerRadius="12" 
                                Padding="20,24"
                                BorderThickness="2"
                                BorderBrush="Transparent"
                                Cursor="Hand">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1E"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CardBorder" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="CardBorder" Property="Background" Value="#1A1A1E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer Style="{StaticResource SmoothScrollViewer}" 
                  Padding="0,0,12,0">
        <StackPanel Margin="20,20,20,40">
            <!-- Compact Header -->
            <Border Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="OMEN CONTROLS" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="HP OMEN-specific features: Performance modes, fan curves, GPU switching" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0"/>
                    </StackPanel>
                    
                    <!-- Active Mode Badge -->
                    <Border Grid.Column="1" Background="#1A1A1E" CornerRadius="20" Padding="14,8" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreenBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding SystemControl.CurrentPerformanceModeIndicator}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Performance Mode Section - Redesigned -->
            <Border Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Section Header -->
                    <Border Grid.Row="0" Background="#0D0D0F" CornerRadius="8" Padding="14,10" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="âš¡" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="PERFORMANCE MODE" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="System power and cooling profile" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                    
                    <!-- Mode Selection Cards -->
                    <UniformGrid Grid.Row="1" Rows="1" Columns="3">
                        <!-- Quiet Mode -->
                        <RadioButton x:Name="QuietModeRadio"
                                     GroupName="PerformanceMode"
                                     IsChecked="{Binding SystemControl.IsQuietMode, Mode=OneWay}"
                                     Command="{Binding SystemControl.SelectPerformanceModeCommand}"
                                     CommandParameter="Quiet"
                                     Style="{StaticResource PerformanceModeCard}"
                                     Margin="0,0,8,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Icon with Glow -->
                                <Border Grid.Row="0" Width="56" Height="56" CornerRadius="28" Margin="0,0,0,12" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#3000FF88" Offset="0"/>
                                            <GradientStop Color="#0000FF88" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="ðŸŒ™" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="1" Text="Quiet" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="SILENT OPERATION" FontSize="9" FontWeight="SemiBold" Foreground="#00FF88" 
                                           HorizontalAlignment="Center" Margin="0,4,0,10"/>
                                
                                <!-- Feature Tags -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <Border Background="#2000FF88" CornerRadius="4" Padding="8,4" Margin="0,0,4,0">
                                        <TextBlock Text="Low Power" FontSize="9" Foreground="#00FF88"/>
                                    </Border>
                                    <Border Background="#2000FF88" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="Silent Fans" FontSize="9" Foreground="#00FF88"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Active Badge -->
                                <Border Grid.Row="4" Background="{StaticResource AccentBrush}" CornerRadius="6" Padding="16,6" 
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding SystemControl.IsQuietMode, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="âœ“ ACTIVE" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </Grid>
                        </RadioButton>
                        
                        <!-- Balanced Mode -->
                        <RadioButton x:Name="BalancedModeRadio"
                                     GroupName="PerformanceMode"
                                     IsChecked="{Binding SystemControl.IsBalancedMode, Mode=OneWay}"
                                     Command="{Binding SystemControl.SelectPerformanceModeCommand}"
                                     CommandParameter="Balanced"
                                     Style="{StaticResource PerformanceModeCard}"
                                     Margin="4,0,4,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Width="56" Height="56" CornerRadius="28" Margin="0,0,0,12" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#3000D4FF" Offset="0"/>
                                            <GradientStop Color="#0000D4FF" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="âš–ï¸" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="1" Text="Balanced" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="RECOMMENDED" FontSize="9" FontWeight="SemiBold" Foreground="#00D4FF" 
                                           HorizontalAlignment="Center" Margin="0,4,0,10"/>
                                
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <Border Background="#2000D4FF" CornerRadius="4" Padding="8,4" Margin="0,0,4,0">
                                        <TextBlock Text="Auto Power" FontSize="9" Foreground="#00D4FF"/>
                                    </Border>
                                    <Border Background="#2000D4FF" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="Smart Fans" FontSize="9" Foreground="#00D4FF"/>
                                    </Border>
                                </StackPanel>
                                
                                <Border Grid.Row="4" Background="{StaticResource AccentBrush}" CornerRadius="6" Padding="16,6" 
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding SystemControl.IsBalancedMode, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="âœ“ ACTIVE" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </Grid>
                        </RadioButton>
                        
                        <!-- Performance Mode -->
                        <RadioButton x:Name="PerformanceModeRadio"
                                     GroupName="PerformanceMode"
                                     IsChecked="{Binding SystemControl.IsPerformanceMode, Mode=OneWay}"
                                     Command="{Binding SystemControl.SelectPerformanceModeCommand}"
                                     CommandParameter="Performance"
                                     Style="{StaticResource PerformanceModeCard}"
                                     Margin="8,0,0,0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Width="56" Height="56" CornerRadius="28" Margin="0,0,0,12" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#30FF6B35" Offset="0"/>
                                            <GradientStop Color="#00FF6B35" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="ðŸš€" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="1" Text="Performance" FontSize="16" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="MAXIMUM POWER" FontSize="9" FontWeight="SemiBold" Foreground="#FF6B35" 
                                           HorizontalAlignment="Center" Margin="0,4,0,10"/>
                                
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                    <Border Background="#20FF6B35" CornerRadius="4" Padding="8,4" Margin="0,0,4,0">
                                        <TextBlock Text="Max Power" FontSize="9" Foreground="#FF6B35"/>
                                    </Border>
                                    <Border Background="#20FF6B35" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="High Fans" FontSize="9" Foreground="#FF6B35"/>
                                    </Border>
                                </StackPanel>
                                
                                <Border Grid.Row="4" Background="{StaticResource AccentBrush}" CornerRadius="6" Padding="16,6" 
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding SystemControl.IsPerformanceMode, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="âœ“ ACTIVE" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </Grid>
                        </RadioButton>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Fan Curve Editor Section -->
            <GroupBox Header="Custom Fan Curve" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <views:FanControlView DataContext="{Binding FanControl}" />
            </GroupBox>

            <!-- GPU Power Boost Section -->
            <Border Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,16">
                <Grid>
                    <!-- Active Badge - Top Right Corner -->
                    <Border HorizontalAlignment="Right" VerticalAlignment="Top"
                            Margin="0,-8,-8,0"
                            Background="#00D4FF"
                            CornerRadius="0,8,0,8"
                            Padding="12,6"
                            Visibility="{Binding SystemControl.GpuPowerBoostActive, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš¡" FontSize="12" Foreground="#0D1117" Margin="0,0,6,0" VerticalAlignment="Center"/>
                            <TextBlock Text="BOOST ACTIVE" FontSize="11" FontWeight="Bold" Foreground="#0D1117"/>
                        </StackPanel>
                    </Border>
                    
                    <StackPanel>
                        <TextBlock Text="GPU Power Boost (TGP/Dynamic Boost)" FontSize="20" FontWeight="SemiBold" 
                                   Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                        
                        <TextBlock Text="Control GPU Total Graphics Power (TGP) and Dynamic Boost (PPAB). Higher settings enable more GPU wattage. Extended option is for RTX 5080 and newer GPUs that may support +25W boost." 
                                   FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,16" TextWrapping="Wrap"/>

                        <!-- Current Status - Prominent Indicator -->
                        <Border CornerRadius="10"
                                Padding="16,14"
                                Margin="0,0,0,16">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Background" Value="#1A00D4FF"/>
                                    <Setter Property="BorderBrush" Value="#4000D4FF"/>
                                    <Setter Property="BorderThickness" Value="1"/>
                                </Style>
                            </Border.Style>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Glowing Status Icon with Pulse Effect -->
                                <Border Grid.Column="0" Width="48" Height="48" CornerRadius="24"
                                        Margin="0,0,16,0">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#3000D4FF" Offset="0"/>
                                            <GradientStop Color="#1000D4FF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="#00D4FF" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                                    </Border.Effect>
                                    <TextBlock Text="âš¡" FontSize="24" 
                                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="CURRENT POWER MODE" 
                                               FontSize="10" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,0,0,4"/>
                                    <TextBlock Text="{Binding SystemControl.GpuPowerBoostStatus}" 
                                               FontSize="18" FontWeight="Bold"
                                               Foreground="#00D4FF"/>
                                </StackPanel>

                                <!-- Wattage Indicator -->
                                <Border Grid.Column="2" VerticalAlignment="Center"
                                        Background="#2000D4FF" CornerRadius="6" Padding="12,8"
                                        Visibility="{Binding SystemControl.GpuPowerBoostActive, Converter={StaticResource BooleanToVisibilityConverter}, FallbackValue=Visible}">
                                    <StackPanel>
                                        <TextBlock Text="EXTRA POWER" FontSize="9" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>
                                        <TextBlock Text="+15W" FontSize="20" FontWeight="Bold"
                                                   Foreground="#00FF88" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>

                    <!-- Power Level Selection -->
                    <Grid Margin="0,0,0,16" 
                          Visibility="{Binding SystemControl.GpuPowerBoostAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Power Level:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <ComboBox Grid.Column="1" 
                                  Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding SystemControl.GpuPowerBoostLevels}"
                                  SelectedItem="{Binding SystemControl.GpuPowerBoostLevel}"
                                  Margin="0,0,12,0"/>
                        
                        <Button Grid.Column="2" 
                                Content="Apply" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding SystemControl.ApplyGpuPowerBoostCommand}"
                                Padding="16,8"/>
                    </Grid>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- GPU Switching Section -->
            <Border Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="GPU Switching (Advanced Optimus)" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Switch between integrated and discrete GPU for optimal performance or battery life." 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,12" TextWrapping="Wrap"/>
                    
                    <!-- Hardware Limitation Warning -->
                    <Border Background="#2D2D1F"
                            BorderBrush="#FF9800"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10,8"
                            Margin="0,0,0,16">
                        <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap">
                            <Run Text="âš  Hardware Limitation: " FontWeight="SemiBold" Foreground="#FF9800"/>
                            <Run Text="GPU mode switching requires a system reboot. Some OMEN models only support this via BIOS settings."/>
                        </TextBlock>
                    </Border>

                    <!-- Current GPU Mode -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Current Mode:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding SystemControl.CurrentGpuMode}" 
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"/>
                    </Grid>

                    <!-- GPU Mode Selection -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Switch To:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <ComboBox Grid.Column="1" 
                                  Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding SystemControl.GpuSwitchModes}"
                                  SelectedItem="{Binding SystemControl.SelectedGpuMode}"
                                  Margin="0,0,12,0"/>
                        
                        <Button Grid.Column="2" 
                                Content="Apply (Requires Restart)" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding SystemControl.SwitchGpuModeCommand}"
                                Padding="16,8"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Display Overdrive Section -->
            <Border CornerRadius="12" Padding="20" Margin="0,0,0,16"
                    Visibility="{Binding SystemControl.DisplayOverdriveSupported, Converter={StaticResource BoolToVisibility}}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#161B28" Offset="0"/>
                        <GradientStop Color="#1A2035" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <TextBlock Text="DISPLAY OVERDRIVE" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                    <TextBlock Text="Reduces panel response time for less motion blur during fast-paced gaming. May cause slight overshoot artifacts on some displays." 
                               TextWrapping="Wrap" Foreground="{StaticResource TextSecondaryBrush}" FontSize="12" Margin="0,0,0,12"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" VerticalAlignment="Center">
                            <TextBlock Text="Panel Overdrive" FontSize="13" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="Improves pixel response time on 165Hz+ displays" FontSize="11" Foreground="{StaticResource TextMutedBrush}" Margin="0,2,0,0"/>
                        </StackPanel>
                        <ToggleButton Grid.Column="1" 
                                      IsChecked="{Binding SystemControl.DisplayOverdriveEnabled, Mode=TwoWay}" 
                                      Style="{StaticResource ModernToggleButton}"
                                      VerticalAlignment="Center"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
