<UserControl x:Class="OmenCore.Views.AdvancedView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:OmenCore.Controls"
             xmlns:utils="clr-namespace:OmenCore.Utils"
             xmlns:views="clr-namespace:OmenCore.Views"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1000">
    <ScrollViewer Style="{StaticResource SmoothScrollViewer}" 
                  utils:ScrollSpeedBehavior.ScrollSpeedMultiplier="1.2"
                  Padding="0,0,12,0">
        <StackPanel Margin="20,20,20,40">
            <!-- Header -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock Text="Advanced Controls" Style="{StaticResource Heading1}"/>
                <TextBlock Text="Fine-tune fan curves, CPU undervolting, GPU power limits, and temperature targets" 
                           Style="{StaticResource Caption}"
                           Opacity="0.9"/>
            </StackPanel>

            <!-- Performance Mode Section -->
            <Border Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Performance Mode" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,4"/>
                    <TextBlock Text="Select system power and cooling profile" 
                               FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16"/>
                    
                    <!-- Mode Selection Buttons -->
                    <UniformGrid Rows="1" Margin="0,0,0,16">
                        <RadioButton x:Name="QuietModeRadio"
                                     GroupName="PerformanceMode"
                                     IsChecked="{Binding SystemControl.IsQuietMode, Mode=OneWay}"
                                     Command="{Binding SystemControl.SelectPerformanceModeCommand}"
                                     CommandParameter="Quiet"
                                     Style="{StaticResource PerformanceModeRadioStyle}"
                                     Margin="0,0,8,0">
                            <StackPanel>
                                <TextBlock Text="ðŸŒ™" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="Quiet" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Silent operation" FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                        
                        <RadioButton x:Name="BalancedModeRadio"
                                     GroupName="PerformanceMode"
                                     IsChecked="{Binding SystemControl.IsBalancedMode, Mode=OneWay}"
                                     Command="{Binding SystemControl.SelectPerformanceModeCommand}"
                                     CommandParameter="Balanced"
                                     Style="{StaticResource PerformanceModeRadioStyle}"
                                     Margin="4,0,4,0">
                            <StackPanel>
                                <TextBlock Text="âš–ï¸" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="Balanced" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Optimal balance" FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                        
                        <RadioButton x:Name="PerformanceModeRadio"
                                     GroupName="PerformanceMode"
                                     IsChecked="{Binding SystemControl.IsPerformanceMode, Mode=OneWay}"
                                     Command="{Binding SystemControl.SelectPerformanceModeCommand}"
                                     CommandParameter="Performance"
                                     Style="{StaticResource PerformanceModeRadioStyle}"
                                     Margin="8,0,0,0">
                            <StackPanel>
                                <TextBlock Text="ðŸš€" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock Text="Performance" FontSize="14" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                                <TextBlock Text="Maximum power" FontSize="11" Opacity="0.7" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </RadioButton>
                    </UniformGrid>
                    
                    <!-- Current Mode Status -->
                    <Border Background="{StaticResource SurfaceDarkBrush}" CornerRadius="8" Padding="12">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Active Mode:" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" 
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SystemControl.CurrentPerformanceModeName}" 
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Fan Curve Editor Section -->
            <GroupBox Header="Custom Fan Curve" Style="{StaticResource ModernGroupBox}" Margin="0,0,0,20">
                <views:FanControlView DataContext="{Binding FanControl}" />
            </GroupBox>

            <!-- CPU Undervolting Section - Hidden when not supported -->
            <Border Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,16"
                    Visibility="{Binding SystemControl.IsUndervoltSupported, Converter={StaticResource BoolToVisibility}, FallbackValue=Visible}">
                <StackPanel>
                    <TextBlock Text="CPU Undervolting" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    
                    <Border Background="{StaticResource SurfaceDarkBrush}" 
                            CornerRadius="8" Padding="12" Margin="0,0,0,16"
                            BorderBrush="Orange" BorderThickness="2">
                        <TextBlock FontSize="12" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap">
                            <Run Text="âš ï¸ IMPORTANT SAFETY INFORMATION" FontWeight="Bold" Foreground="Orange" FontSize="13"/>
                            <LineBreak/><LineBreak/>
                            <Run Text="â€¢ Incorrect voltage offsets can cause system crashes, data loss, or instability" FontWeight="SemiBold"/>
                            <LineBreak/>
                            <Run Text="â€¢ Start with conservative values (-60mV) and test thoroughly"/>
                            <LineBreak/>
                            <Run Text="â€¢ After applying, run a stress test (Prime95, Cinebench) for 30+ minutes"/>
                            <LineBreak/>
                            <Run Text="â€¢ If system crashes or freezes, reduce offset by 10-20mV"/>
                        </TextBlock>
                    </Border>

                    <!-- Undervolt Status -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Status:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding SystemControl.UndervoltStatusText}" 
                                   FontSize="14" 
                                   Foreground="{Binding SystemControl.UndervoltStatusColor}"/>
                    </Grid>

                    <!-- Core Offset -->
                    <StackPanel Margin="0,0,0,16">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Core Voltage Offset:" 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SystemControl.RequestedCoreOffset, StringFormat={}{0} mV}" 
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"/>
                        </Grid>
                        
                        <Slider Minimum="-200" Maximum="0" 
                                TickFrequency="5" 
                                Value="{Binding SystemControl.RequestedCoreOffset, Mode=TwoWay}"
                                IsSnapToTickEnabled="True"/>
                        
                        <TextBlock Text="Recommended: -80 mV to -120 mV" 
                                   FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0"/>
                    </StackPanel>

                    <!-- Cache Offset -->
                    <StackPanel Margin="0,0,0,16">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Cache Voltage Offset:" 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SystemControl.RequestedCacheOffset, StringFormat={}{0} mV}" 
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"/>
                        </Grid>
                        
                        <Slider Minimum="-200" Maximum="0" 
                                TickFrequency="5" 
                                Value="{Binding SystemControl.RequestedCacheOffset, Mode=TwoWay}"
                                IsSnapToTickEnabled="True"/>
                    </StackPanel>

                    <!-- Per-Core Undervolt Toggle -->
                    <Border Background="{StaticResource SurfaceDarkBrush}" 
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Enable Per-Core Undervolting" 
                                               FontSize="14" FontWeight="SemiBold"
                                               Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <TextBlock Text="Set individual voltage offsets for each CPU core" 
                                               FontSize="11" 
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               Margin="0,2,0,0"/>
                                </StackPanel>
                                
                                <ToggleButton Grid.Column="1" 
                                              IsChecked="{Binding SystemControl.EnablePerCoreUndervolt, Mode=TwoWay}"
                                              Style="{StaticResource ModernToggleButton}"
                                              VerticalAlignment="Center"/>
                            </Grid>
                            
                            <TextBlock Text="âš ï¸ Advanced feature - requires testing each core individually. Start with conservative values." 
                                       FontSize="11" 
                                       Foreground="Orange"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <!-- Per-Core Offset Controls - Only visible when enabled -->
                    <Border Visibility="{Binding SystemControl.PerCoreUndervoltVisible, Converter={StaticResource BoolToVisibility}}"
                            Background="{StaticResource SurfaceDarkBrush}" 
                            CornerRadius="8" Padding="16" Margin="0,0,0,16">
                        <StackPanel>
                            <TextBlock Text="Per-Core Voltage Offsets" 
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}"
                                       Margin="0,0,0,12"/>
                            
                            <TextBlock Text="Individual core offsets (leave empty to use global core offset):" 
                                       FontSize="11" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       Margin="0,0,0,8"/>
                            
                            <!-- Per-core controls will be added here dynamically -->
                            <ItemsControl ItemsSource="{Binding SystemControl.PerCoreOffsets}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource SurfaceBrush}" 
                                                CornerRadius="6" Padding="12" Margin="0,0,0,8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0" 
                                                           Text="{Binding CoreName}" 
                                                           FontSize="13" FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextPrimaryBrush}"
                                                           VerticalAlignment="Center"
                                                           Margin="0,0,12,0"/>
                                                           
                                                <Slider Grid.Column="1" 
                                                        Minimum="-200" Maximum="0" 
                                                        TickFrequency="5" 
                                                        Value="{Binding OffsetMv, Mode=TwoWay, TargetNullValue={x:Static sys:Double.NaN}}"
                                                        IsSnapToTickEnabled="True"
                                                        Margin="0,0,12,0"/>
                                                        
                                                <TextBlock Grid.Column="2" 
                                                           Text="{Binding OffsetText}" 
                                                           FontSize="13" FontWeight="SemiBold"
                                                           Foreground="{StaticResource AccentBrush}"
                                                           VerticalAlignment="Center"
                                                           Width="60" TextAlignment="Right"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>

                    <!-- Apply Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Apply Undervolt" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding SystemControl.ApplyUndervoltCommand}"
                                Padding="16,8" Margin="0,0,8,0"/>
                        
                        <Button Content="Reset to Default" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding SystemControl.ResetUndervoltCommand}"
                                Padding="16,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Undervolt Not Supported Info Box - Shown when undervolt is NOT supported -->
            <Border Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,16"
                    Visibility="{Binding SystemControl.IsUndervoltSupported, Converter={StaticResource InverseBoolToVisibility}, FallbackValue=Collapsed}">
                <StackPanel>
                    <TextBlock Text="CPU Undervolting" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    
                    <Border Background="#1A2A3A" 
                            CornerRadius="8" Padding="16" Margin="0,0,0,0"
                            BorderBrush="{StaticResource AccentBlueBrush}" BorderThickness="1">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <TextBlock Text="â„¹ï¸" FontSize="18" Margin="0,0,8,0"/>
                                <TextBlock Text="Undervolting Not Available" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{StaticResource AccentBlueBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"
                                       Text="{Binding SystemControl.UndervoltNotSupportedReason}"/>
                            
                            <Border Background="{StaticResource SurfaceDarkBrush}" 
                                    CornerRadius="6" Padding="12" Margin="0,12,0,0">
                                <TextBlock FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap">
                                    <Run Text="Why is undervolting blocked?" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                    <LineBreak/><LineBreak/>
                                    <Run Text="On Intel CPUs: Modern CPUs (10th gen+) have MSR 0x150 locked by Intel's Plundervolt security patches (CVE-2019-11157). Most BIOS updates after 2020 include this lock."/>
                                    <LineBreak/><LineBreak/>
                                    <Run Text="On AMD CPUs: Ryzen processors use Curve Optimizer instead of voltage offset. This requires specific SMU commands which may not be available on all models."/>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- GPU Power Boost Section -->
            <Border Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="GPU Power Boost (TGP/Dynamic Boost)" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Control GPU Total Graphics Power (TGP) and Dynamic Boost (PPAB). Higher settings enable more GPU wattage. Extended option is for RTX 5080 and newer GPUs that may support +25W boost." 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,16" TextWrapping="Wrap"/>

                    <!-- Current Status -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Status:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding SystemControl.GpuPowerBoostStatus}" 
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"/>
                    </Grid>

                    <!-- Power Level Selection -->
                    <Grid Margin="0,0,0,16" 
                          Visibility="{Binding SystemControl.GpuPowerBoostAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Power Level:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <ComboBox Grid.Column="1" 
                                  Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding SystemControl.GpuPowerBoostLevels}"
                                  SelectedItem="{Binding SystemControl.GpuPowerBoostLevel}"
                                  Margin="0,0,12,0"/>
                        
                        <Button Grid.Column="2" 
                                Content="Apply" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding SystemControl.ApplyGpuPowerBoostCommand}"
                                Padding="16,8"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- GPU Switching Section -->
            <Border Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,16">
                <StackPanel>
                    <TextBlock Text="GPU Switching (Advanced Optimus)" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    
                    <TextBlock Text="Switch between integrated and discrete GPU for optimal performance or battery life." 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,12" TextWrapping="Wrap"/>
                    
                    <!-- Hardware Limitation Warning -->
                    <Border Background="#2D2D1F"
                            BorderBrush="#FF9800"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="10,8"
                            Margin="0,0,0,16">
                        <TextBlock FontSize="10" Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap">
                            <Run Text="âš  Hardware Limitation: " FontWeight="SemiBold" Foreground="#FF9800"/>
                            <Run Text="GPU mode switching requires a system reboot. Some OMEN models only support this via BIOS settings."/>
                        </TextBlock>
                    </Border>

                    <!-- Current GPU Mode -->
                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Current Mode:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   Margin="0,0,12,0"/>
                        
                        <TextBlock Grid.Column="1" 
                                   Text="{Binding SystemControl.CurrentGpuMode}" 
                                   FontSize="14" FontWeight="SemiBold"
                                   Foreground="{StaticResource AccentBrush}"/>
                    </Grid>

                    <!-- GPU Mode Selection -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Switch To:" 
                                   FontSize="14" 
                                   Foreground="{StaticResource TextPrimaryBrush}"
                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                        
                        <ComboBox Grid.Column="1" 
                                  Style="{StaticResource ModernComboBox}"
                                  ItemsSource="{Binding SystemControl.GpuSwitchModes}"
                                  SelectedItem="{Binding SystemControl.SelectedGpuMode}"
                                  Margin="0,0,12,0"/>
                        
                        <Button Grid.Column="2" 
                                Content="Apply (Requires Restart)" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding SystemControl.SwitchGpuModeCommand}"
                                Padding="16,8"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- CPU Temperature Limit -->
            <Border Style="{StaticResource SurfaceCard}" Padding="24"
                    Visibility="{Binding SystemControl.TccStatus.IsSupported, Converter={StaticResource BoolToVisibility}}">
                <StackPanel>
                    <TextBlock Text="CPU Temperature Limit (TCC Offset)" FontSize="20" FontWeight="SemiBold" 
                               Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8"/>
                    
                    <TextBlock FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,16" TextWrapping="Wrap">
                        <Run Text="Set a maximum temperature for your CPU. The CPU will throttle when approaching this limit. Useful for reducing heat and fan noise."/>
                    </TextBlock>
                    
                    <!-- Current Status -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <TextBlock Text="Current: " FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBlock Text="{Binding SystemControl.TccStatusText}" FontSize="14" Foreground="{StaticResource AccentBrush}"/>
                    </StackPanel>
                    
                    <!-- Temperature Limit Slider -->
                    <StackPanel Margin="0,0,0,16">
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Temperature Limit:" 
                                       FontSize="14" 
                                       Foreground="{StaticResource TextPrimaryBrush}"/>
                            
                            <TextBlock Grid.Column="1" 
                                       Text="{Binding SystemControl.RequestedTempLimit, StringFormat={}{0}Â°C}" 
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="{StaticResource AccentBrush}"/>
                        </Grid>
                        
                        <Slider Minimum="0" Maximum="{Binding SystemControl.TccSliderMaximum}" 
                                TickFrequency="5" 
                                Value="{Binding SystemControl.RequestedTccOffset, Mode=TwoWay}"
                                IsSnapToTickEnabled="True"
                                IsDirectionReversed="True"/>
                    </StackPanel>

                    <!-- Apply Buttons -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Apply Limit" 
                                Style="{StaticResource ModernButton}"
                                Command="{Binding SystemControl.ApplyTccOffsetCommand}"
                                Padding="16,8" Margin="0,0,8,0"/>
                        
                        <Button Content="Remove Limit" 
                                Style="{StaticResource SecondaryButton}"
                                Command="{Binding SystemControl.ResetTccOffsetCommand}"
                                Padding="16,8"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
