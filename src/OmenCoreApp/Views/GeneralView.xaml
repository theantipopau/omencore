                                </StackPanel>
                                
                                <Border Grid.Row="4" Background="{StaticResource AccentBrush}" CornerRadius="6" Padding="12,6" 
                                        HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                                        Visibility="{Binding IsBalancedSelected, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="âœ“ ACTIVE" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Quiet Profile -->
                        <Border Style="{StaticResource ProfileCard}" 
                                Margin="4,0,4,0" Padding="16,20"
                                BorderBrush="{Binding SelectedProfileBorder_Quiet}"
                                BorderThickness="2"
                                MouseLeftButtonUp="Profile_Quiet_Click"
                                ToolTip="Reduced power limits and minimal fan speed for silent operation">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Width="56" Height="56" CornerRadius="28" Margin="0,0,0,12" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#3000FF88" Offset="0"/>
                                            <GradientStop Color="#0000FF88" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="ðŸ”‡" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="1" Text="Quiet" FontSize="15" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="SILENT OPERATION" FontSize="9" FontWeight="SemiBold" Foreground="#00FF88" 
                                           HorizontalAlignment="Center" Margin="0,4,0,8"/>
                                
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <Border Background="#2000FF88" CornerRadius="4" Padding="6,3" Margin="0,0,4,0">
                                        <TextBlock Text="Power Save" FontSize="9" Foreground="#00FF88"/>
                                    </Border>
                                    <Border Background="#2000FF88" CornerRadius="4" Padding="6,3">
                                        <TextBlock Text="Low Fans" FontSize="9" Foreground="#00FF88"/>
                                    </Border>
                                </StackPanel>
                                
                                <Border Grid.Row="4" Background="{StaticResource AccentBrush}" CornerRadius="6" Padding="12,6" 
                                        HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                                        Visibility="{Binding IsQuietSelected, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="âœ“ ACTIVE" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Custom Profile -->
                        <Border Style="{StaticResource ProfileCard}" 
                                Margin="8,0,0,0" Padding="16,20"
                                BorderBrush="{Binding SelectedProfileBorder_Custom}"
                                BorderThickness="2"
                                MouseLeftButtonUp="Profile_Custom_Click"
                                ToolTip="User-defined fan curves and power settings via the OMEN tab">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Width="56" Height="56" CornerRadius="28" Margin="0,0,0,12" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#30A855F7" Offset="0"/>
                                            <GradientStop Color="#00A855F7" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="âš™ï¸" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="1" Text="Custom" FontSize="15" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="ADVANCED CONTROL" FontSize="9" FontWeight="SemiBold" Foreground="#A855F7" 
                                           HorizontalAlignment="Center" Margin="0,4,0,8"/>
                                
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <Border Background="#20A855F7" CornerRadius="4" Padding="6,3" Margin="0,0,4,0">
                                        <TextBlock Text="Manual" FontSize="9" Foreground="#A855F7"/>
                                    </Border>
                                    <Border Background="#20A855F7" CornerRadius="4" Padding="6,3">
                                        <TextBlock Text="OMEN Tab" FontSize="9" Foreground="#A855F7"/>
                                    </Border>
                                </StackPanel>
                                
                                <Border Grid.Row="4" Background="{StaticResource AccentBrush}" CornerRadius="6" Padding="12,6" 
                                        HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                                        Visibility="{Binding IsCustomSelected, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="âœ“ ACTIVE" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>
                    </UniformGrid>
                </Grid>
            </Border>

            <!-- Live System Stats - Enhanced Dashboard Style -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU Stats Card -->
                <Border Grid.Column="0" Style="{StaticResource StatCard}" Margin="0,0,6,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Card Header -->
                        <Border Grid.Row="0" Background="#0D0D0F" CornerRadius="8" Padding="12,8" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="ðŸ”¥" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="CPU" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border Grid.Column="2" Background="{Binding CpuTemp, Converter={StaticResource TemperatureToColorConverter}}" 
                                        CornerRadius="4" Padding="8,4" Opacity="0.9">
                                    <TextBlock FontSize="12" FontWeight="Bold" 
                                               Foreground="White" FontFamily="Consolas">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding CpuTemp, StringFormat={}{0:F0}Â°C}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding CpuTemp}" Value="0">
                                                        <Setter Property="Text" Value="â€”Â°C"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Stats Content -->
                        <StackPanel Grid.Row="1">
                            <!-- Temperature Bar -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="TEMP" Style="{StaticResource GaugeLabel}"/>
                                <Grid Grid.Column="1">
                                    <ProgressBar Value="{Binding CpuTemp, Mode=OneWay}" Maximum="100" Height="8" 
                                                 Background="#1A1A1E" Foreground="{StaticResource AccentBrush}">
                                        <ProgressBar.Clip>
                                            <RectangleGeometry Rect="0,0,1000,8" RadiusX="4" RadiusY="4"/>
                                        </ProgressBar.Clip>
                                    </ProgressBar>
                                </Grid>
                            </Grid>
                            
                            <!-- Load Bar -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="LOAD" Style="{StaticResource GaugeLabel}"/>
                                <Grid Grid.Column="1">
                                    <ProgressBar Value="{Binding CpuLoad, Mode=OneWay}" Maximum="100" Height="8" 
                                                 Background="#1A1A1E" Foreground="{StaticResource WarningBrush}">
                                        <ProgressBar.Clip>
                                            <RectangleGeometry Rect="0,0,1000,8" RadiusX="4" RadiusY="4"/>
                                        </ProgressBar.Clip>
                                    </ProgressBar>
                                </Grid>
                                <TextBlock Grid.Column="2" Text="{Binding CpuLoad, StringFormat={}{0:F0}%}" 
                                           Style="{StaticResource GaugeValue}" Foreground="{StaticResource WarningBrush}"/>
                            </Grid>
                            
                            <!-- Power & Fan Row -->
                            <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Padding="0,12,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Power -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="POWER" Style="{StaticResource GaugeLabel}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding CpuPowerWatts, StringFormat={}{0:F0}W}" FontSize="18" FontWeight="Bold" 
                                                   FontFamily="Consolas" Foreground="{StaticResource AccentGreenBrush}" 
                                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Fan -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="ðŸŒ€ FAN" Style="{StaticResource GaugeLabel}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding CpuFanRpm, StringFormat={}{0}}" FontSize="18" FontWeight="Bold" 
                                                   FontFamily="Consolas" Foreground="{StaticResource AccentBrush}" 
                                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                        <TextBlock Text="RPM" FontSize="9" Foreground="{StaticResource TextTertiaryBrush}" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- GPU Stats Card -->
                <Border Grid.Column="1" Style="{StaticResource StatCard}" Margin="6,0,6,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Card Header -->
                        <Border Grid.Row="0" Background="#0D0D0F" CornerRadius="8" Padding="12,8" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="ðŸŽ¯" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="GPU" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border Grid.Column="2" Background="{Binding GpuTemp, Converter={StaticResource TemperatureToColorConverter}}" 
                                        CornerRadius="4" Padding="8,4" Opacity="0.9">
                                    <TextBlock FontSize="12" FontWeight="Bold" 
                                               Foreground="White" FontFamily="Consolas">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Text" Value="{Binding GpuTemp, StringFormat={}{0:F0}Â°C}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding GpuTemp}" Value="0">
                                                        <Setter Property="Text" Value="â€”Â°C"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Stats Content -->
                        <StackPanel Grid.Row="1">
                            <!-- Temperature Bar -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="TEMP" Style="{StaticResource GaugeLabel}"/>
                                <Grid Grid.Column="1">
                                    <ProgressBar Value="{Binding GpuTemp, Mode=OneWay}" Maximum="100" Height="8" 
                                                 Background="#1A1A1E" Foreground="{StaticResource AccentBlueBrush}">
                                        <ProgressBar.Clip>
                                            <RectangleGeometry Rect="0,0,1000,8" RadiusX="4" RadiusY="4"/>
                                        </ProgressBar.Clip>
                                    </ProgressBar>
                                </Grid>
                            </Grid>
                            
                            <!-- Load Bar -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="LOAD" Style="{StaticResource GaugeLabel}"/>
                                <Grid Grid.Column="1">
                                    <ProgressBar Value="{Binding GpuLoad, Mode=OneWay}" Maximum="100" Height="8" 
                                                 Background="#1A1A1E" Foreground="{StaticResource WarningBrush}">
                                        <ProgressBar.Clip>
                                            <RectangleGeometry Rect="0,0,1000,8" RadiusX="4" RadiusY="4"/>
                                        </ProgressBar.Clip>
                                    </ProgressBar>
                                </Grid>
                                <TextBlock Grid.Column="2" Text="{Binding GpuLoad, StringFormat={}{0:F0}%}" 
                                           Style="{StaticResource GaugeValue}" Foreground="{StaticResource WarningBrush}"/>
                            </Grid>
                            
                            <!-- Power & Fan Row -->
                            <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Padding="0,12,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Power -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="POWER" Style="{StaticResource GaugeLabel}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding GpuPowerWatts, StringFormat={}{0:F0}W}" FontSize="18" FontWeight="Bold" 
                                                   FontFamily="Consolas" Foreground="{StaticResource AccentGreenBrush}" 
                                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    
                                    <!-- Fan -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="ðŸŒ€ FAN" Style="{StaticResource GaugeLabel}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding GpuFanRpm, StringFormat={}{0}}" FontSize="18" FontWeight="Bold" 
                                                   FontFamily="Consolas" Foreground="{StaticResource AccentBlueBrush}" 
                                                   HorizontalAlignment="Center" Margin="0,4,0,0"/>
                                        <TextBlock Text="RPM" FontSize="9" Foreground="{StaticResource TextTertiaryBrush}" 
                                                   HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- System Stats Card -->
                <Border Grid.Column="2" Style="{StaticResource StatCard}" Margin="6,0,0,0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Card Header -->
                        <Border Grid.Row="0" Background="#0D0D0F" CornerRadius="8" Padding="12,8" Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal">
                                    <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="SYSTEM" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <Border Grid.Column="2" Background="{StaticResource AccentPurpleBrush}" 
                                        CornerRadius="4" Padding="8,4" Opacity="0.9">
                                    <TextBlock Text="{Binding RamPercent, StringFormat={}{0:F0}%}" FontSize="12" FontWeight="Bold" 
                                               Foreground="White" FontFamily="Consolas"/>
                                </Border>
                            </Grid>
                        </Border>
                        
                        <!-- Stats Content -->
                        <StackPanel Grid.Row="1">
                            <!-- RAM Bar -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="RAM" Style="{StaticResource GaugeLabel}"/>
                                <Grid Grid.Column="1">
                                    <ProgressBar Value="{Binding RamPercent, Mode=OneWay}" Maximum="100" Height="8" 
                                                 Background="#1A1A1E" Foreground="{StaticResource AccentPurpleBrush}">
                                        <ProgressBar.Clip>
                                            <RectangleGeometry Rect="0,0,1000,8" RadiusX="4" RadiusY="4"/>
                                        </ProgressBar.Clip>
                                    </ProgressBar>
                                </Grid>
                            </Grid>
                            
                            <!-- RAM Details -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="USED" Style="{StaticResource GaugeLabel}"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding RamUsedGb, StringFormat={}{0:F1}}" FontSize="14" FontWeight="Bold" 
                                               FontFamily="Consolas" Foreground="{StaticResource AccentPurpleBrush}"/>
                                    <TextBlock Text=" / " FontSize="14" Foreground="{StaticResource TextTertiaryBrush}"/>
                                    <TextBlock Text="{Binding RamTotalGb, StringFormat={}{0:F0} GB}" FontSize="14" FontFamily="Consolas"
                                               Foreground="{StaticResource TextSecondaryBrush}"/>
                                </StackPanel>
                            </Grid>
                            
                            <!-- Active Profile Display -->
                            <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Padding="0,12,0,0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- Performance Mode -->
                                    <Grid Grid.Row="0" Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="âš¡ MODE" Style="{StaticResource GaugeLabel}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding CurrentPerformanceMode}" 
                                                   Style="{StaticResource GaugeValue}" Foreground="{StaticResource AccentBrush}"/>
                                    </Grid>
                                    
                                    <!-- Fan Mode -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="ðŸŒ€ FANS" Style="{StaticResource GaugeLabel}"/>
                                        <TextBlock Grid.Column="1" Text="{Binding CurrentFanMode}" 
                                                   Style="{StaticResource GaugeValue}" Foreground="{StaticResource AccentBrush}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
