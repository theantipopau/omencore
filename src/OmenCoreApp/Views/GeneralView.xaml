<UserControl x:Class="OmenCore.Views.GeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             xmlns:utils="clr-namespace:OmenCore.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <ScrollViewer Style="{StaticResource SmoothScrollViewer}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,24">
                <Border Style="{StaticResource SurfaceCard}" 
                        Padding="20,14"
                        HorizontalAlignment="Center">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="{Binding BrandLogoPath}" Width="48" Height="48" Margin="0,0,16,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Performance &amp; Cooling" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="Select a profile to optimize performance and cooling together" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" Opacity="0.9" Margin="0,2,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Paired Profile Selection -->
            <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="24" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="QUICK PROFILES" Style="{StaticResource Label}" Margin="0,0,0,8"/>
                    <TextBlock Text="Each profile pairs a performance mode with an optimal fan configuration" 
                               Style="{StaticResource Caption}" FontSize="13" Margin="0,0,0,20"/>

                    <!-- Profile Cards Grid -->
                    <UniformGrid Rows="1" Columns="4" Margin="0,0,0,0">
                        <!-- Performance Profile -->
                        <Border Style="{StaticResource SurfaceCard}" 
                                Margin="0,0,8,0" Padding="16"
                                BorderBrush="{Binding SelectedProfileBorder_Performance}"
                                BorderThickness="2"
                                Cursor="Hand"
                                MouseLeftButtonUp="Profile_Performance_Click">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ”¥" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Performance" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Max Power + Aggressive Cooling" FontSize="10" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           TextAlignment="Center" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="8,4" Margin="0,8,0,0"
                                        Visibility="{Binding IsPerformanceSelected, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="ACTIVE" FontSize="9" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Balanced Profile -->
                        <Border Style="{StaticResource SurfaceCard}" 
                                Margin="4,0,4,0" Padding="16"
                                BorderBrush="{Binding SelectedProfileBorder_Balanced}"
                                BorderThickness="2"
                                Cursor="Hand"
                                MouseLeftButtonUp="Profile_Balanced_Click">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="âš–ï¸" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Balanced" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Default Power + Auto Fans" FontSize="10" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           TextAlignment="Center" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="8,4" Margin="0,8,0,0"
                                        Visibility="{Binding IsBalancedSelected, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="ACTIVE" FontSize="9" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Quiet Profile -->
                        <Border Style="{StaticResource SurfaceCard}" 
                                Margin="4,0,4,0" Padding="16"
                                BorderBrush="{Binding SelectedProfileBorder_Quiet}"
                                BorderThickness="2"
                                Cursor="Hand"
                                MouseLeftButtonUp="Profile_Quiet_Click">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="ðŸ”‡" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Quiet" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Power Saver + Silent Fans" FontSize="10" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           TextAlignment="Center" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="8,4" Margin="0,8,0,0"
                                        Visibility="{Binding IsQuietSelected, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="ACTIVE" FontSize="9" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>

                        <!-- Custom Profile -->
                        <Border Style="{StaticResource SurfaceCard}" 
                                Margin="8,0,0,0" Padding="16"
                                BorderBrush="{Binding SelectedProfileBorder_Custom}"
                                BorderThickness="2"
                                Cursor="Hand"
                                MouseLeftButtonUp="Profile_Custom_Click">
                            <StackPanel HorizontalAlignment="Center">
                                <TextBlock Text="âš™ï¸" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                <TextBlock Text="Custom" FontSize="14" FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Text="Manual Control (Advanced Tab)" FontSize="10" 
                                           Foreground="{StaticResource TextSecondaryBrush}" 
                                           TextAlignment="Center" TextWrapping="Wrap" Margin="0,4,0,0"/>
                                <Border Background="{StaticResource AccentBrush}" CornerRadius="4" Padding="8,4" Margin="0,8,0,0"
                                        Visibility="{Binding IsCustomSelected, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="ACTIVE" FontSize="9" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Border>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <!-- Live Status - v2.7.0: Enhanced with more metrics -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- CPU Stats -->
                <Border Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="16" Margin="0,0,6,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ”¥ CPU" Style="{StaticResource Label}" Margin="0,0,0,12"/>
                        
                        <!-- Temperature -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Temp" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1" Value="{Binding CpuTemp, Mode=OneWay}" Maximum="100" Height="6" Margin="12,0" 
                                         Background="{StaticResource SurfaceMediumBrush}" Foreground="{StaticResource AccentBrush}"/>
                            <TextBlock Grid.Column="2" Text="{Binding CpuTemp, StringFormat={}{0:F0}Â°C}" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" Width="45" TextAlignment="Right"/>
                        </Grid>
                        
                        <!-- Load -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Load" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1" Value="{Binding CpuLoad, Mode=OneWay}" Maximum="100" Height="6" Margin="12,0" 
                                         Background="{StaticResource SurfaceMediumBrush}" Foreground="{StaticResource WarningBrush}"/>
                            <TextBlock Grid.Column="2" Text="{Binding CpuLoad, StringFormat={}{0:F0}%}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Width="45" TextAlignment="Right"/>
                        </Grid>
                        
                        <!-- Power -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Power" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding CpuPowerWatts, StringFormat={}{0:F0}W}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" TextAlignment="Right"/>
                        </Grid>
                        
                        <!-- Fan -->
                        <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Margin="0,12,0,0" Padding="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸŒ€ Fan" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding CpuFanRpm, StringFormat={}{0} RPM}" 
                                           FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" TextAlignment="Right"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- GPU Stats -->
                <Border Grid.Column="1" Style="{StaticResource SurfaceCard}" Padding="16" Margin="6,0,6,0">
                    <StackPanel>
                        <TextBlock Text="ðŸŽ¯ GPU" Style="{StaticResource Label}" Margin="0,0,0,12"/>
                        
                        <!-- Temperature -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Temp" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1" Value="{Binding GpuTemp, Mode=OneWay}" Maximum="100" Height="6" Margin="12,0" 
                                         Background="{StaticResource SurfaceMediumBrush}" Foreground="{StaticResource AccentBlueBrush}"/>
                            <TextBlock Grid.Column="2" Text="{Binding GpuTemp, StringFormat={}{0:F0}Â°C}" 
                                       FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBlueBrush}" Width="45" TextAlignment="Right"/>
                        </Grid>
                        
                        <!-- Load -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Load" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1" Value="{Binding GpuLoad, Mode=OneWay}" Maximum="100" Height="6" Margin="12,0" 
                                         Background="{StaticResource SurfaceMediumBrush}" Foreground="{StaticResource WarningBrush}"/>
                            <TextBlock Grid.Column="2" Text="{Binding GpuLoad, StringFormat={}{0:F0}%}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Width="45" TextAlignment="Right"/>
                        </Grid>
                        
                        <!-- Power -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Power" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="{Binding GpuPowerWatts, StringFormat={}{0:F0}W}" 
                                       FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentGreenBrush}" TextAlignment="Right"/>
                        </Grid>
                        
                        <!-- Fan -->
                        <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Margin="0,12,0,0" Padding="0,12,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="ðŸŒ€ Fan" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding GpuFanRpm, StringFormat={}{0} RPM}" 
                                           FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBlueBrush}" TextAlignment="Right"/>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Memory Stats -->
                <Border Grid.Column="2" Style="{StaticResource SurfaceCard}" Padding="16" Margin="6,0,0,0">
                    <StackPanel>
                        <TextBlock Text="ðŸ’¾ MEMORY" Style="{StaticResource Label}" Margin="0,0,0,12"/>
                        
                        <!-- RAM Usage -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="RAM" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <ProgressBar Grid.Column="1" Value="{Binding RamPercent, Mode=OneWay}" Maximum="100" Height="6" Margin="12,0" 
                                         Background="{StaticResource SurfaceMediumBrush}" Foreground="{StaticResource AccentPurpleBrush}"/>
                            <TextBlock Grid.Column="2" Text="{Binding RamPercent, StringFormat={}{0:F0}%}" 
                                       FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Width="45" TextAlignment="Right"/>
                        </Grid>
                        
                        <!-- RAM Details -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Used" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding RamUsedGb, StringFormat={}{0:F1}}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentPurpleBrush}"/>
                                <TextBlock Text=" / " FontSize="14" Foreground="{StaticResource TextTertiaryBrush}"/>
                                <TextBlock Text="{Binding RamTotalGb, StringFormat={}{0:F0} GB}" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Grid>
                        
                        <!-- Current Profile -->
                        <Border BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderBrush}" Margin="0,12,0,0" Padding="0,12,0,0">
                            <StackPanel>
                                <Grid Margin="0,0,0,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="âš¡ Mode" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentPerformanceMode}" 
                                               FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" TextAlignment="Right"/>
                                </Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Text="ðŸŒ€ Fans" FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1" Text="{Binding CurrentFanMode}" 
                                               FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource AccentBrush}" TextAlignment="Right"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
