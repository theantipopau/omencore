<UserControl x:Class="OmenCore.Views.GeneralView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             xmlns:utils="clr-namespace:OmenCore.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- Profile Card Style with Hover Effects -->
        <Style x:Key="ProfileCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1A1A1E" Offset="0"/>
                        <GradientStop Color="#141418" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#222228" Offset="0"/>
                                <GradientStop Color="#1A1A1E" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#1A1A1E" Offset="0"/>
                        <GradientStop Color="#141418" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#222228" Offset="0"/>
                                <GradientStop Color="#1A1A1E" Offset="1"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Gauge Label Style -->
        <Style x:Key="GaugeLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <!-- Gauge Value Style -->
        <Style x:Key="GaugeValue" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer Style="{StaticResource SmoothScrollViewer}">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header - Compact and Modern -->
            <Border Grid.Row="0" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Image Source="{Binding BrandLogoPath}" Width="36" Height="36" Margin="0,0,12,0" VerticalAlignment="Center" RenderOptions.BitmapScalingMode="HighQuality" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="PERFORMANCE &amp; COOLING" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="Quick profile selection for optimal system tuning" FontSize="11" Foreground="{StaticResource TextTertiaryBrush}" Margin="0,2,0,0" />
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Current Status Badge -->
                    <Border Grid.Column="2" Background="#1A1A1E" CornerRadius="20" Padding="16,8" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="{StaticResource AccentGreenBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentPerformanceMode}" FontSize="12" FontWeight="SemiBold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text=" Â· " FontSize="12" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentFanMode}" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Profile Selection - MSI Afterburner Inspired -->
            <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Section Header -->
                    <Border Grid.Row="0" Background="#0D0D0F" CornerRadius="8" Padding="14,10" Margin="0,0,0,16">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="âš¡" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                <TextBlock Text="QUICK PROFILES" FontSize="11" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Grid.Column="2" Text="Click to activate" FontSize="10" Foreground="{StaticResource TextTertiaryBrush}" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Profile Cards Grid -->
                    <UniformGrid Grid.Row="1" Rows="1" Columns="4">
                        <!-- Performance Profile -->
                        <Border Style="{StaticResource ProfileCard}" 
                                Margin="0,0,8,0" Padding="16,20"
                                BorderBrush="{Binding SelectedProfileBorder_Performance}"
                                BorderThickness="2"
                                MouseLeftButtonUp="Profile_Performance_Click"
                                ToolTip="Maximum CPU/GPU power limits and aggressive fan curves for gaming and heavy workloads">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Icon with Glow Effect -->
                                <Border Grid.Row="0" Width="56" Height="56" CornerRadius="28" Margin="0,0,0,12" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#30FF6B35" Offset="0"/>
                                            <GradientStop Color="#00FF6B35" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="ðŸ”¥" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="1" Text="Performance" FontSize="15" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="MAXIMUM OUTPUT" FontSize="9" FontWeight="SemiBold" Foreground="#FF6B35" 
                                           HorizontalAlignment="Center" Margin="0,4,0,8"/>
                                
                                <!-- Feature Tags -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <Border Background="#20FF6B35" CornerRadius="4" Padding="6,3" Margin="0,0,4,0">
                                        <TextBlock Text="Max Power" FontSize="9" Foreground="#FF6B35"/>
                                    </Border>
                                    <Border Background="#20FF6B35" CornerRadius="4" Padding="6,3">
                                        <TextBlock Text="High Fans" FontSize="9" Foreground="#FF6B35"/>
                                    </Border>
                                </StackPanel>
                                
                                <!-- Active Badge -->
                                <Border Grid.Row="4" Background="{StaticResource AccentBrush}" CornerRadius="6" Padding="12,6" 
                                        HorizontalAlignment="Stretch" VerticalAlignment="Bottom"
                                        Visibility="{Binding IsPerformanceSelected, Converter={StaticResource BoolToVisibility}}">
                                    <TextBlock Text="âœ“ ACTIVE" FontSize="10" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                                </Border>
                            </Grid>
                        </Border>

                        <!-- Balanced Profile -->
                        <Border Style="{StaticResource ProfileCard}" 
                                Margin="4,0,4,0" Padding="16,20"
                                BorderBrush="{Binding SelectedProfileBorder_Balanced}"
                                BorderThickness="2"
                                MouseLeftButtonUp="Profile_Balanced_Click"
                                ToolTip="Default HP profile â€” balanced power and thermals for everyday use">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" Width="56" Height="56" CornerRadius="28" Margin="0,0,0,12" HorizontalAlignment="Center">
                                    <Border.Background>
                                        <RadialGradientBrush>
                                            <GradientStop Color="#3000D4FF" Offset="0"/>
                                            <GradientStop Color="#0000D4FF" Offset="1"/>
                                        </RadialGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="âš–ï¸" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Grid.Row="1" Text="Balanced" FontSize="15" FontWeight="Bold" 
                                           Foreground="{StaticResource TextPrimaryBrush}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="2" Text="RECOMMENDED" FontSize="9" FontWeight="SemiBold" Foreground="#00D4FF" 
                                           HorizontalAlignment="Center" Margin="0,4,0,8"/>
                                
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,8">
                                    <Border Background="#2000D4FF" CornerRadius="4" Padding="6,3" Margin="0,0,4,0">
                                        <TextBlock Text="Default" FontSize="9" Foreground="#00D4FF"/>
                                    </Border>
                                    <Border Background="#2000D4FF" CornerRadius="4" Padding="6,3">
                                        <TextBlock Text="Auto Fans" FontSize="9" Foreground="#00D4FF"/>
