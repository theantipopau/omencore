<Window x:Class="OmenCore.Views.QuickPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OmenCore Quick Access"
        AllowsTransparency="True"
        WindowStyle="None"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ShowActivated="True"
        ResizeMode="NoResize"
        Width="320"
        Height="480"
        WindowStartupLocation="Manual"
        Deactivated="Window_Deactivated">
    
    <Window.Resources>
        <!-- Dark Theme Colors -->
        <Color x:Key="SurfaceDark">#0F111C</Color>
        <Color x:Key="SurfaceMedium">#15192B</Color>
        <Color x:Key="AccentPrimary">#FF005C</Color>
        <Color x:Key="AccentSecondary">#00C8C8</Color>
        <Color x:Key="TextPrimary">#F0F0F5</Color>
        <Color x:Key="TextSecondary">#A0A5B4</Color>
        <Color x:Key="BorderColor">#3C415A</Color>
        
        <SolidColorBrush x:Key="SurfaceDarkBrush" Color="{StaticResource SurfaceDark}"/>
        <SolidColorBrush x:Key="SurfaceMediumBrush" Color="{StaticResource SurfaceMedium}"/>
        <SolidColorBrush x:Key="AccentPrimaryBrush" Color="{StaticResource AccentPrimary}"/>
        <SolidColorBrush x:Key="AccentSecondaryBrush" Color="{StaticResource AccentSecondary}"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
        
        <LinearGradientBrush x:Key="BackgroundGradient" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#F0101420" Offset="0"/>
            <GradientStop Color="#F0181C30" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Quick Button Style -->
        <Style x:Key="QuickButtonStyle" TargetType="Button">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#22FFFFFF" Offset="0"/>
                        <GradientStop Color="#11FFFFFF" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#33FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#44FFFFFF" Offset="0"/>
                                            <GradientStop Color="#22FFFFFF" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="BorderBrush" Value="#55FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#33FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Mode Button Style -->
        <Style x:Key="ModeButtonStyle" TargetType="Button" BasedOn="{StaticResource QuickButtonStyle}">
            <Setter Property="Height" Value="60"/>
            <Setter Property="MinWidth" Value="85"/>
        </Style>
        
        <!-- Active Mode Button Style -->
        <Style x:Key="ActiveModeButtonStyle" TargetType="Button" BasedOn="{StaticResource ModeButtonStyle}">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#66FF005C" Offset="0"/>
                        <GradientStop Color="#44FF005C" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FF005C"/>
        </Style>
    </Window.Resources>
    
    <Border Background="{StaticResource BackgroundGradient}"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1"
            CornerRadius="16">
        <Border.Effect>
            <DropShadowEffect Color="#000000" Opacity="0.5" BlurRadius="24" ShadowDepth="4" Direction="270"/>
        </Border.Effect>
        
        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸŽ®" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Quick Access" FontSize="16" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
                <Button Grid.Column="1" Content="âœ•" FontSize="14" Width="28" Height="28" 
                        Style="{StaticResource QuickButtonStyle}" Click="CloseButton_Click"
                        Background="Transparent" BorderThickness="0" Padding="0"/>
            </Grid>
            
            <!-- Temperature Display -->
            <Border Grid.Row="1" Background="#11FFFFFF" CornerRadius="10" Padding="12" Margin="0,0,0,12">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- CPU -->
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="CPU" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                            <TextBlock x:Name="CpuTempText" Text="--" FontSize="26" FontWeight="Bold" Foreground="#FF6464"/>
                            <TextBlock Text="Â°C" FontSize="14" Foreground="#FF6464" VerticalAlignment="Bottom" Margin="2,0,0,4"/>
                        </StackPanel>
                        <TextBlock x:Name="CpuLoadText" Text="--%" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- GPU -->
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock Text="GPU" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,4,0,0">
                            <TextBlock x:Name="GpuTempText" Text="--" FontSize="26" FontWeight="Bold" Foreground="#64C8FF"/>
                            <TextBlock Text="Â°C" FontSize="14" Foreground="#64C8FF" VerticalAlignment="Bottom" Margin="2,0,0,4"/>
                        </StackPanel>
                        <TextBlock x:Name="GpuLoadText" Text="--%" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Fan Mode Section -->
            <TextBlock Grid.Row="2" Text="Fan Mode" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <UniformGrid Grid.Row="3" Rows="1" Margin="0,0,0,12">
                <Button x:Name="FanAutoBtn" Style="{StaticResource ModeButtonStyle}" Click="FanMode_Click" Tag="Auto">
                    <StackPanel>
                        <TextBlock Text="âš¡" FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Text="Auto" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="FanMaxBtn" Style="{StaticResource ModeButtonStyle}" Click="FanMode_Click" Tag="Max">
                    <StackPanel>
                        <TextBlock Text="ðŸ”¥" FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Text="Max" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="FanQuietBtn" Style="{StaticResource ModeButtonStyle}" Click="FanMode_Click" Tag="Quiet">
                    <StackPanel>
                        <TextBlock Text="ðŸ¤«" FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Text="Quiet" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
            
            <!-- Performance Mode Section -->
            <TextBlock Grid.Row="4" Text="Performance Mode" FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,6"/>
            <UniformGrid Grid.Row="5" Rows="1" Margin="0,0,0,12" VerticalAlignment="Top">
                <Button x:Name="PerfBalancedBtn" Style="{StaticResource ModeButtonStyle}" Click="PerformanceMode_Click" Tag="Balanced">
                    <StackPanel>
                        <TextBlock Text="âš–ï¸" FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Text="Balanced" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="PerfPerformanceBtn" Style="{StaticResource ModeButtonStyle}" Click="PerformanceMode_Click" Tag="Performance">
                    <StackPanel>
                        <TextBlock Text="ðŸš€" FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Text="Perform" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="PerfQuietBtn" Style="{StaticResource ModeButtonStyle}" Click="PerformanceMode_Click" Tag="Quiet">
                    <StackPanel>
                        <TextBlock Text="ðŸ”‹" FontSize="18" HorizontalAlignment="Center"/>
                        <TextBlock Text="Quiet" FontSize="11" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                    </StackPanel>
                </Button>
            </UniformGrid>
            
            <!-- Quick Actions -->
            <StackPanel Grid.Row="6" VerticalAlignment="Bottom" Margin="0,12,0,0">
                <UniformGrid Rows="1">
                    <Button x:Name="DisplayOffBtn" Style="{StaticResource QuickButtonStyle}" Click="DisplayOff_Click" ToolTip="Turn off display">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŒ™" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock Text="Display Off" FontSize="11"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="RefreshRateBtn" Style="{StaticResource QuickButtonStyle}" Click="RefreshRate_Click" ToolTip="Toggle refresh rate">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ–¥ï¸" FontSize="14" Margin="0,0,6,0"/>
                            <TextBlock x:Name="RefreshRateText" Text="165Hz" FontSize="11"/>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </StackPanel>
        </Grid>
    </Border>
</Window>
