<Window x:Class="OmenCore.Views.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="OmenCore"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Width="450" Height="280"
        Topmost="True"
        ShowInTaskbar="False">
    
    <Window.Resources>
        <Storyboard x:Key="PulseAnimation">
            <DoubleAnimation Storyboard.TargetName="LogoGlow"
                             Storyboard.TargetProperty="Opacity"
                             From="0.3" To="0.8" Duration="0:0:1"
                             AutoReverse="True" RepeatBehavior="Forever"/>
        </Storyboard>
        
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
    </Window.Resources>
    
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource PulseAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </Window.Triggers>
    
    <Border CornerRadius="16" Background="#1A1A1A" BorderBrush="#333333" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="0" Opacity="0.5" Color="#000000"/>
        </Border.Effect>
        
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Logo and Title -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,16,0,24">
                <Grid>
                    <!-- Glow Effect -->
                    <Ellipse x:Name="LogoGlow" Width="80" Height="80" 
                             HorizontalAlignment="Center" VerticalAlignment="Center"
                             Opacity="0.5">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#E6002E" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    
                    <!-- OMEN Diamond Logo (simplified) -->
                    <Viewbox Width="48" Height="48" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Canvas Width="48" Height="48">
                            <Path Fill="#E6002E" Data="M24,4 L44,24 L24,44 L4,24 Z"/>
                            <Path Fill="#1A1A1A" Data="M24,12 L36,24 L24,36 L12,24 Z"/>
                            <Path Fill="#E6002E" Data="M24,18 L30,24 L24,30 L18,24 Z"/>
                        </Canvas>
                    </Viewbox>
                </Grid>
                
                <TextBlock Text="OmenCore" 
                           FontSize="32" FontWeight="Bold" 
                           Foreground="#FFFFFF"
                           HorizontalAlignment="Center"
                           Margin="0,12,0,0"/>
                <TextBlock Text="Hardware Control Suite" 
                           FontSize="13" 
                           Foreground="#888888"
                           HorizontalAlignment="Center"
                           Margin="0,4,0,0"/>
            </StackPanel>
            
            <!-- Progress Bar -->
            <Grid Grid.Row="2" Margin="0,8,0,0">
                <ProgressBar x:Name="ProgressBar" 
                             Height="4" 
                             Minimum="0" Maximum="100" Value="0"
                             Background="#333333"
                             Foreground="#E6002E"
                             BorderThickness="0">
                    <ProgressBar.Style>
                        <Style TargetType="ProgressBar">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ProgressBar">
                                        <Border CornerRadius="2" Background="{TemplateBinding Background}">
                                            <Border x:Name="PART_Indicator" 
                                                    CornerRadius="2"
                                                    HorizontalAlignment="Left"
                                                    Background="{TemplateBinding Foreground}"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ProgressBar.Style>
                </ProgressBar>
            </Grid>
            
            <!-- Status Text -->
            <TextBlock x:Name="StatusText" 
                       Grid.Row="3"
                       Text="Initializing..."
                       FontSize="12"
                       Foreground="#AAAAAA"
                       HorizontalAlignment="Center"
                       Margin="0,12,0,0"/>
            
            <!-- Version -->
            <TextBlock x:Name="VersionText"
                       Grid.Row="4"
                       Text="v1.4.0"
                       FontSize="11"
                       Foreground="#555555"
                       HorizontalAlignment="Center"
                       Margin="0,12,0,0"/>
        </Grid>
    </Border>
</Window>
