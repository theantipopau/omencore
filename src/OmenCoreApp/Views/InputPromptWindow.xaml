<Window x:Class="OmenCore.Views.InputPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input" Height="160" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="MessageText" Grid.Row="0" Text="Prompt" TextWrapping="Wrap" Margin="0,0,0,8"/>
        <TextBox x:Name="InputTextBox" Grid.Row="1" Height="28" VerticalAlignment="Top"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="OK" Width="80" Margin="0,0,8,0" Click="OkButton_Click" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>