<Window x:Class="OmenCore.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About OmenCore" Height="360" Width="500" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="None" Icon="/Assets/OmenCore.ico"
        AllowsTransparency="True"
        Background="Transparent"
        KeyDown="Window_KeyDown">
    <Border Background="{StaticResource BackgroundDarkBrush}" 
            BorderBrush="{StaticResource BorderBrush}" 
            BorderThickness="1" 
            CornerRadius="12">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <DockPanel Grid.Row="0" Margin="0,0,0,20">
                <Image Source="/Assets/logo.png" Width="80" Height="80" DockPanel.Dock="Left" Margin="0,0,20,0" />
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="OmenCore" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}" />
                    <TextBlock Text="Gaming Laptop Control Center" FontSize="14" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,4,0,0" />
                </StackPanel>
            </DockPanel>
            
            <StackPanel Grid.Row="1">
                <Border Background="{StaticResource SurfaceMediumBrush}" 
                        BorderBrush="{StaticResource BorderBrush}" 
                        BorderThickness="1" 
                        CornerRadius="8" 
                        Padding="16" 
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock x:Name="VersionText" Text="Version 1.0.0" FontSize="14" Foreground="{StaticResource TextPrimaryBrush}" Margin="0,0,0,8" />
                        <TextBlock Text="Advanced thermal, power, and RGB control for HP Omen gaming laptops." 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,8" />
                        <TextBlock Text="Features: EC/ACPI hooks, fan curves, CPU undervolt, Corsair/Logitech device sync." 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondaryBrush}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,8" />
                        <TextBlock x:Name="UpdateStatusText" 
                                   Text="" 
                                   FontSize="12" 
                                   Foreground="{StaticResource AccentBlueBrush}" 
                                   TextWrapping="Wrap" 
                                   Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,16">
                    <TextBlock Text="Â© 2025 - " 
                               FontSize="12" 
                               Foreground="{StaticResource TextTertiaryBrush}" 
                               VerticalAlignment="Center" />
                    <TextBlock FontSize="12" VerticalAlignment="Center">
                        <Hyperlink NavigateUri="https://github.com/theantipopau/omencore" 
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   Foreground="{StaticResource AccentBlueBrush}">
                            Open Source Project
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,0">
                    <Button x:Name="CheckUpdatesButton" 
                            Content="Check for Updates" 
                            Width="150" 
                            Height="40"
                            Click="CheckUpdatesClicked" 
                            Style="{StaticResource ModernButton}" 
                            Padding="16,10" 
                            Margin="0,0,12,0" />
                    <Button x:Name="CloseButton"
                            Content="Close" 
                            Width="100" 
                            Height="40"
                            Click="CloseClicked" 
                            IsCancel="True"
                            Style="{StaticResource SecondaryButton}" 
                            Padding="16,10" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
