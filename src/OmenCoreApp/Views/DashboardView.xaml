<UserControl x:Class="OmenCore.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             xmlns:utils="clr-namespace:OmenCore.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <ScrollViewer Style="{StaticResource SmoothScrollViewer}" 
                  Padding="0,0,12,0"
                  utils:ScrollSpeedBehavior.ScrollSpeedMultiplier="1.2">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Hardware Monitoring" Style="{StaticResource Heading1}"/>
                <TextBlock Text="Real-time performance metrics and system status" 
                           Style="{StaticResource Caption}"
                           Margin="0,0,0,0"/>
            </StackPanel>
            
            <!-- Performance Mode Status -->
            <Border Grid.Column="1" 
                    Background="{StaticResource SurfaceDarkBrush}"
                    BorderBrush="{StaticResource AccentBrush}"
                    BorderThickness="1"
                    CornerRadius="6"
                    Padding="14,8"
                    Margin="20,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <Path Data="{StaticResource IconPerformance}" Width="16" Height="16" Fill="{StaticResource AccentBrush}" Stretch="Uniform" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentPerformanceMode, FallbackValue=Auto}" 
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource AccentBrush}" 
                               VerticalAlignment="Center"/>
                    <Rectangle Width="1" Height="18" Fill="{StaticResource BorderBrush}" Margin="14,0"/>
                    <Path Data="{StaticResource IconFan}" Width="14" Height="14" Fill="{StaticResource AccentBlueBrush}" Stretch="Uniform" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentFanMode, FallbackValue=Auto}" 
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Throttling Status Indicator with pulse animation -->
            <Border x:Name="ThrottlingIndicator" Grid.Column="2"
                    Visibility="{Binding IsThrottling, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}"
                    Background="{StaticResource SurfaceDarkBrush}"
                    BorderBrush="#FFAA33"
                    BorderThickness="1.5"
                    CornerRadius="6"
                    Padding="14,8"
                    Margin="10,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ToolTip="System is throttling due to thermal or power limits. Consider improving cooling or reducing workload.">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                 From="1" To="0.65" Duration="0:0:0.8" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="⚠️" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding ThrottlingSummary, FallbackValue=Throttling}" 
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="#FFAA33" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <ToggleButton Grid.Column="3" 
                          IsChecked="{Binding MonitoringLowOverheadMode}" 
                          Content="Reduce CPU Usage" 
                          Style="{StaticResource ToggleButtonStyle}" 
                          Width="170" Height="38"
                          ToolTip="Disable charts to reduce monitoring overhead"/>
        </Grid>

        <!-- Hardware Summary Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Card -->
            <Border Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="0,0,10,0"
                    ToolTip="CPU temperature and utilization. Green = OK, Yellow = Warm, Orange = Hot, Red = Critical">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="PROCESSOR" 
                                   Style="{StaticResource Label}"/>
                        <Ellipse Width="10" Height="10" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Fill="{Binding LatestMonitoringSample.CpuTemperatureC, Converter={StaticResource TemperatureToColorConverter}, ConverterParameter=cpu}"
                                 ToolTip="Temperature status indicator"/>
                    </Grid>
                    <TextBlock Text="{Binding CpuSummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </StackPanel>
            </Border>

            <!-- GPU Card -->
            <Border Grid.Column="1" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="5,0"
                    ToolTip="GPU temperature, load, and VRAM usage. GPUs can safely run hotter than CPUs.">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="GRAPHICS" 
                                   Style="{StaticResource Label}"/>
                        <Ellipse Width="10" Height="10" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Fill="{Binding LatestMonitoringSample.GpuTemperatureC, Converter={StaticResource TemperatureToColorConverter}, ConverterParameter=gpu}"
                                 ToolTip="Temperature status indicator"/>
                    </Grid>
                    <TextBlock Text="{Binding GpuSummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </StackPanel>
            </Border>

            <!-- Memory Card -->
            <Border Grid.Column="2" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="5,0"
                    ToolTip="System RAM usage. High usage may cause slowdowns - consider closing unused applications.">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="MEMORY" 
                                   Style="{StaticResource Label}"/>
                        <Ellipse Width="10" Height="10" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Fill="{Binding LatestMonitoringSample.RamUsagePercent, Converter={StaticResource LoadToColorConverter}}"
                                 ToolTip="Memory usage indicator"/>
                    </Grid>
                    <TextBlock Text="{Binding MemorySummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </StackPanel>
            </Border>

            <!-- Storage Card (hidden when SSD data unavailable) -->
            <Border Grid.Column="3" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="5,0"
                    ToolTip="SSD temperature and disk activity. Optimal SSD temp is below 45°C."
                    Visibility="{Binding IsSsdDataAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="STORAGE" 
                                   Style="{StaticResource Label}"/>
                        <Ellipse Width="10" Height="10" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Fill="{Binding LatestMonitoringSample.SsdTemperatureC, Converter={StaticResource TemperatureToColorConverter}, ConverterParameter=ssd}"
                                 ToolTip="SSD temperature indicator"/>
                    </Grid>
                    <TextBlock Text="{Binding StorageSummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </StackPanel>
            </Border>
            
            <!-- Battery Card -->
            <Border Grid.Column="4" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="10,0,0,0"
                    ToolTip="Battery charge level and power status. Keep battery between 20-80% for longevity.">
                <StackPanel>
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="BATTERY" 
                                   Style="{StaticResource Label}"/>
                        <Ellipse Width="10" Height="10" 
                                 HorizontalAlignment="Right" 
                                 VerticalAlignment="Center"
                                 Fill="{Binding LatestMonitoringSample.BatteryChargePercent, Converter={StaticResource LoadToColorConverter}}"
                                 ToolTip="Battery level indicator"/>
                    </Grid>
                    <TextBlock Text="{Binding BatterySummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Charts (only visible when not in low overhead mode) -->
        <Grid Grid.Row="2" Visibility="{Binding MonitoringGraphsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="250"/>
                <RowDefinition Height="*" MinHeight="250"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Temperature Chart -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,10,10">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="CPU TEMPERATURE" 
                                   Style="{StaticResource Label}" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding LatestMonitoringSample.CpuTemperatureC, StringFormat={}{0:F0}°C, FallbackValue=--°C}" 
                                   Style="{StaticResource ValueDisplay}"
                                   FontSize="32"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                           Height="200"/>
                </StackPanel>
            </Border>

            <!-- GPU Temperature Chart -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource SurfaceCard}" Padding="20" Margin="10,0,0,10">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="GPU TEMPERATURE" 
                                   Style="{StaticResource Label}" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding LatestMonitoringSample.GpuTemperatureC, StringFormat={}{0:F0}°C, FallbackValue=--°C}" 
                                   FontSize="32" FontWeight="Bold" 
                                   Foreground="#45C7FF" 
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                           Height="200"/>
                </StackPanel>
            </Border>

            <!-- CPU/GPU Load Chart -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,10,10,0">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <TextBlock Text="UTILIZATION" 
                                   Style="{StaticResource Label}" 
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"/>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel Margin="0,0,16,0">
                                <TextBlock Text="CPU" 
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding LatestMonitoringSample.CpuLoadPercent, StringFormat={}{0:F0}%}" 
                                           Style="{StaticResource SecondaryValue}"
                                           FontSize="18"
                                           Foreground="{StaticResource AccentBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="GPU" 
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding LatestMonitoringSample.GpuLoadPercent, StringFormat={}{0:F0}%}" 
                                           Style="{StaticResource SecondaryValue}"
                                           FontSize="18"
                                           Foreground="#45C7FF"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <controls:LoadChart Samples="{Binding MonitoringSamples}" 
                                        Height="200"/>
                </StackPanel>
            </Border>

            <!-- CPU Clock Details -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource SurfaceCard}" Padding="20" Margin="10,10,0,0">
                <StackPanel>
                    <TextBlock Text="CPU FREQUENCIES" 
                               Style="{StaticResource Label}" 
                               Margin="0,0,0,16"/>
                    <TextBlock Text="{Binding CpuClockSummary}" 
                               Style="{StaticResource Caption}"
                               FontSize="13"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               LineHeight="22"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Low Overhead Message -->
        <Border Grid.Row="2" 
                Style="{StaticResource SurfaceCard}" 
                Padding="48" 
                Visibility="{Binding MonitoringLowOverheadMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Path Data="{StaticResource IconPerformance}" 
                      Width="48" Height="48" 
                      Fill="{StaticResource AccentBrush}" 
                      Stretch="Uniform"
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,16"/>
                <TextBlock Text="Reduced CPU Usage Mode" 
                           Style="{StaticResource Heading2}"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,8"/>
                <TextBlock Text="Live charts are disabled to minimize monitoring overhead." 
                           Style="{StaticResource Caption}"
                           FontSize="14"
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Hardware summary information is still available above." 
                           Style="{StaticResource Caption}"
                           FontSize="14"
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
        
            <!-- Loading Overlay -->
            <controls:LoadingOverlay Grid.RowSpan="3" Panel.ZIndex="1000" />
        </Grid>
    </ScrollViewer>
</UserControl>
