        <Border Grid.Row="4" 
                Style="{StaticResource SurfaceCard}" 
                Padding="48" 
                Visibility="{Binding MonitoringLowOverheadMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Path Data="{StaticResource IconPerformance}" 
                      Width="48" Height="48" 
                      Fill="{StaticResource AccentBrush}" 
                      Stretch="Uniform"
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,16"/>
