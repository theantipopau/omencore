<UserControl x:Class="OmenCore.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:OmenCore.Controls"
             xmlns:utils="clr-namespace:OmenCore.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1000">
    <UserControl.Resources>
        <!-- Quick Action Button Style -->
        <Style x:Key="QuickActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceDarkBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource SurfaceMediumBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer Style="{StaticResource SmoothScrollViewer}" 
                  Padding="0,0,12,0">
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Quick Actions -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Hardware Monitoring" Style="{StaticResource Heading1}"/>
                <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                    <TextBlock Text="Session: " Style="{StaticResource Caption}" Opacity="0.7"/>
                    <TextBlock Text="{Binding SessionUptime}" Style="{StaticResource Caption}" Foreground="{StaticResource AccentBrush}"/>
                    <TextBlock Text=" â€¢ Peak: " Style="{StaticResource Caption}" Opacity="0.7" Margin="12,0,0,0"/>
                    <TextBlock Text="CPU " Style="{StaticResource Caption}" Opacity="0.7"/>
                    <TextBlock Text="{Binding PeakCpuTemp, StringFormat={}{0:F0}Â°C}" Style="{StaticResource Caption}" Foreground="#FF6B6B"/>
                    <TextBlock Text=" â€¢ GPU " Style="{StaticResource Caption}" Opacity="0.7" Margin="6,0,0,0"/>
                    <TextBlock Text="{Binding PeakGpuTemp, StringFormat={}{0:F0}Â°C}" Style="{StaticResource Caption}" Foreground="#45C7FF"/>
                    <TextBlock Text=" â€¢ " Style="{StaticResource Caption}" Opacity="0.7" Margin="6,0,0,0"/>
                    <TextBlock Text="{Binding MonitoringHealthStatusText}" Style="{StaticResource Caption}">
                        <TextBlock.Foreground>
                            <SolidColorBrush Color="{Binding MonitoringHealthColor}"/>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <TextBlock Text=" (" Style="{StaticResource Caption}" Opacity="0.7"/>
                    <TextBlock Text="{Binding LastSampleAge}" Style="{StaticResource Caption}" Opacity="0.7"/>
                    <TextBlock Text=")" Style="{StaticResource Caption}" Opacity="0.7"/>
                </StackPanel>
            </StackPanel>
            
            <!-- Quick Action Buttons -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Style="{StaticResource QuickActionButton}" 
                        Command="{Binding RefreshCommand}"
                        ToolTip="Refresh all sensors" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="{StaticResource IconRestore}" Width="14" Height="14" 
                              Fill="{StaticResource TextSecondaryBrush}" Stretch="Uniform" Margin="0,0,6,0"/>
                        <TextBlock Text="Refresh" FontSize="12"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            
            <!-- Throttling Status Indicator with pulse animation -->
            <Border x:Name="ThrottlingIndicator" Grid.Column="1"
                    Visibility="{Binding IsThrottling, Converter={StaticResource BoolToVisibility}, FallbackValue=Collapsed}"
                    Background="{StaticResource SurfaceDarkBrush}"
                    BorderBrush="#FFAA33"
                    BorderThickness="1.5"
                    CornerRadius="6"
                    Padding="14,8"
                    Margin="20,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ToolTip="System is throttling due to thermal or power limits. Consider improving cooling or reducing workload.">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.Loaded">
                        <BeginStoryboard>
                            <Storyboard RepeatBehavior="Forever">
                                <DoubleAnimation Storyboard.TargetProperty="Opacity" 
                                                 From="1" To="0.65" Duration="0:0:0.8" AutoReverse="True">
                                    <DoubleAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="âš ï¸" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="{Binding ThrottlingSummary, FallbackValue=Throttling}" 
                               FontSize="13" FontWeight="SemiBold"
                               Foreground="#FFAA33" 
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Quick Status Bar (v2.2) -->
        <Border Grid.Row="1" Style="{StaticResource SurfaceCard}" Padding="16,12" Margin="0,0,0,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Fan Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="ðŸŒ€" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="FANS" Style="{StaticResource Label}" FontSize="10" Opacity="0.7"/>
                        <TextBlock Text="{Binding FanSummary}" FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"/>
                    </StackPanel>
                </StackPanel>
                
                <Border Grid.Column="1" Width="1" Background="{StaticResource BorderBrush}" Margin="16,4"/>
                
                <!-- Current Profile -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="âš¡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="PERFORMANCE MODE" Style="{StaticResource Label}" FontSize="10" Opacity="0.7"/>
                        <TextBlock Text="{Binding CurrentPerformanceMode}" FontSize="12" Foreground="{StaticResource AccentBrush}" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
                
                <Border Grid.Column="3" Width="1" Background="{StaticResource BorderBrush}" Margin="16,4"/>
                
                <!-- Fan Mode -->
                <StackPanel Grid.Column="4" Orientation="Horizontal">
                    <TextBlock Text="ðŸ’¨" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="FAN MODE" Style="{StaticResource Label}" FontSize="10" Opacity="0.7"/>
                        <TextBlock Text="{Binding CurrentFanMode}" FontSize="12" Foreground="#45C7FF" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
                
                <Border Grid.Column="5" Width="1" Background="{StaticResource BorderBrush}" Margin="16,4"/>
                
                <!-- Power Source -->
                <StackPanel Grid.Column="6" Orientation="Horizontal">
                    <TextBlock Text="ðŸ”Œ" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <StackPanel>
                        <TextBlock Text="POWER" Style="{StaticResource Label}" FontSize="10" Opacity="0.7"/>
                        <TextBlock FontSize="12" Foreground="{StaticResource TextPrimaryBrush}"
                                   Text="{Binding LatestMonitoringSample.IsOnAcPower, Converter={StaticResource BoolToYesNo}, ConverterParameter=AC|Battery, FallbackValue=--}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Hardware Summary Cards -->
        <Grid Grid.Row="2" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
                <ColumnDefinition Width="*" MinWidth="160"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Card -->
            <Border Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="0,0,10,0"
                    ToolTip="CPU temperature and utilization. Green = OK, Yellow = Warm, Orange = Hot, Red = Critical">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconCpu}" Width="16" Height="16" 
                                  Fill="{StaticResource AccentBrush}" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="PROCESSOR" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="{Binding LatestMonitoringSample.CpuTemperatureC, Converter={StaticResource TemperatureToColorConverter}, ConverterParameter=cpu}"
                                CornerRadius="8" Padding="8,3"
                                ToolTip="Temperature status">
                            <TextBlock Text="{Binding LatestMonitoringSample.CpuTemperatureC, StringFormat={}{0:F0}Â°C, FallbackValue=--Â°C}"
                                       Style="{StaticResource MonospaceValue}" FontSize="11" Foreground="White"/>
                        </Border>
                    </Grid>
                    <TextBlock Grid.Row="2" Text="{Binding CpuSummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </Grid>
            </Border>

            <!-- GPU Card -->
            <Border Grid.Column="1" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="5,0"
                    ToolTip="GPU temperature, load, and VRAM usage. GPUs can safely run hotter than CPUs.">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconGpu}" Width="16" Height="16" 
                                  Fill="#45C7FF" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="GRAPHICS" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="{Binding LatestMonitoringSample.GpuTemperatureC, Converter={StaticResource TemperatureToColorConverter}, ConverterParameter=gpu}"
                                CornerRadius="8" Padding="8,3"
                                ToolTip="Temperature status">
                            <TextBlock Text="{Binding LatestMonitoringSample.GpuTemperatureC, StringFormat={}{0:F0}Â°C, FallbackValue=--Â°C}"
                                       Style="{StaticResource MonospaceValue}" FontSize="11" Foreground="White"/>
                        </Border>
                    </Grid>
                    <TextBlock Grid.Row="2" Text="{Binding GpuSummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </Grid>
            </Border>

            <!-- Memory Card -->
            <Border Grid.Column="2" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="5,0"
                    ToolTip="System RAM usage. High usage may cause slowdowns - consider closing unused applications.">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="{StaticResource IconRam}" Width="16" Height="16" 
                                  Fill="#9C27B0" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="MEMORY" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="{Binding LatestMonitoringSample.RamUsagePercent, Converter={StaticResource LoadToColorConverter}}"
                                CornerRadius="8" Padding="8,3"
                                ToolTip="Memory usage indicator">
                            <TextBlock Text="{Binding LatestMonitoringSample.RamUsagePercent, StringFormat={}{0:F0}%, FallbackValue=--%}"
                                       Style="{StaticResource MonospaceValue}" FontSize="11" Foreground="White"/>
                        </Border>
                    </Grid>
                    <TextBlock Grid.Row="2" Text="{Binding MemorySummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </Grid>
            </Border>

            <!-- Storage Card (hidden when SSD data unavailable) -->
            <Border Grid.Column="3" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="5,0"
                    ToolTip="SSD temperature and disk activity. Optimal SSD temp is below 45Â°C."
                    Visibility="{Binding IsSsdDataAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="STORAGE" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="{Binding LatestMonitoringSample.SsdTemperatureC, Converter={StaticResource TemperatureToColorConverter}, ConverterParameter=ssd}"
                                CornerRadius="8" Padding="8,3"
                                ToolTip="SSD temperature indicator">
                            <TextBlock Text="{Binding LatestMonitoringSample.SsdTemperatureC, StringFormat={}{0:F0}Â°C, FallbackValue=--Â°C}"
                                       Style="{StaticResource MonospaceValue}" FontSize="11" Foreground="White"/>
                        </Border>
                    </Grid>
                    <TextBlock Grid.Row="2" Text="{Binding StorageSummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </Grid>
            </Border>
            
            <!-- Battery Card -->
            <Border Grid.Column="4" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="5,0"
                    ToolTip="Battery charge level and power status. Keep battery between 20-80% for longevity.">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”‹" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="BATTERY" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="{Binding LatestMonitoringSample.BatteryChargePercent, Converter={StaticResource LoadToColorConverter}}"
                                CornerRadius="8" Padding="8,3"
                                ToolTip="Battery level indicator">
                            <TextBlock Text="{Binding LatestMonitoringSample.BatteryChargePercent, StringFormat={}{0:F0}%, FallbackValue=--%}"
                                       Style="{StaticResource MonospaceValue}" FontSize="11" Foreground="White"/>
                        </Border>
                    </Grid>
                    <TextBlock Grid.Row="2" Text="{Binding BatterySummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="13"
                               LineHeight="18"/>
                </Grid>
            </Border>
            
            <!-- Power Consumption Card -->
            <Border Grid.Column="5" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="5,0"
                    ToolTip="System power consumption from CPU and GPU. Higher values indicate more intensive workloads.">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš¡" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="POWER" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="#FFD700"
                                CornerRadius="8" Padding="8,3"
                                ToolTip="Total system power">
                            <TextBlock Text="{Binding PowerConsumptionSummary, Converter={StaticResource PowerToTotalConverter}, FallbackValue=--W}"
                                       Style="{StaticResource MonospaceValue}" FontSize="11" Foreground="Black"/>
                        </Border>
                    </Grid>
                    <TextBlock Grid.Row="2" Text="{Binding PowerConsumptionSummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="12"
                               LineHeight="16"/>
                </Grid>
            </Border>
            
            <!-- Fan Curve Card -->
            <Border Grid.Column="6" Style="{StaticResource SurfaceCard}" Padding="18,16" Margin="10,0,0,0"
                    ToolTip="Live fan curve showing temperature vs fan speed relationship.">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ’¨" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="FAN CURVE" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <Border HorizontalAlignment="Right" VerticalAlignment="Center"
                                Background="#87CEEB"
                                CornerRadius="8" Padding="8,3"
                                ToolTip="Current fan speeds">
                            <TextBlock Text="{Binding FanCurveSummary, Converter={StaticResource FanSpeedConverter}, FallbackValue=-- RPM}"
                                       Style="{StaticResource MonospaceValue}" FontSize="11" Foreground="Black"/>
                        </Border>
                    </Grid>
                    <TextBlock Grid.Row="2" Text="{Binding FanCurveSummary}" 
                               Style="{StaticResource BodyText}"
                               FontSize="12"
                               LineHeight="16"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Charts (only visible when not in low overhead mode) -->
        <Grid Grid.Row="4" Visibility="{Binding MonitoringGraphsVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="250"/>
                <RowDefinition Height="*" MinHeight="250"/>
                <RowDefinition Height="*" MinHeight="250"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="400"/>
                <ColumnDefinition Width="*" MinWidth="400"/>
            </Grid.ColumnDefinitions>

            <!-- CPU Temperature Chart -->
            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,0,10,10">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="{StaticResource IconThermometer}" Width="16" Height="16" 
                                  Fill="{StaticResource AccentBrush}" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="CPU TEMPERATURE" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding LatestMonitoringSample.CpuTemperatureC, StringFormat={}{0:F0}Â°C, FallbackValue=--Â°C}" 
                                   Style="{StaticResource MonospaceValueLarge}"
                                   Foreground="{StaticResource AccentBrush}"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                           Height="200"/>
                </StackPanel>
            </Border>

            <!-- GPU Temperature Chart -->
            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource SurfaceCard}" Padding="20" Margin="10,0,0,10">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="{StaticResource IconThermometer}" Width="16" Height="16" 
                                  Fill="#45C7FF" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="GPU TEMPERATURE" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <TextBlock Text="{Binding LatestMonitoringSample.GpuTemperatureC, StringFormat={}{0:F0}Â°C, FallbackValue=--Â°C}" 
                                   Style="{StaticResource MonospaceValueLarge}"
                                   Foreground="#45C7FF" 
                                   HorizontalAlignment="Right"/>
                    </Grid>
                    <controls:ThermalChart Samples="{Binding ThermalSamples}" 
                                           Height="200"/>
                </StackPanel>
            </Border>

            <!-- CPU/GPU Load Chart -->
            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,10,10,0">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <Path Data="{StaticResource IconMonitoring}" Width="16" Height="16" 
                                  Fill="{StaticResource TextSecondaryBrush}" Stretch="Uniform" Margin="0,0,8,0"/>
                            <TextBlock Text="UTILIZATION" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel Margin="0,0,16,0">
                                <TextBlock Text="CPU" 
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding LatestMonitoringSample.CpuLoadPercent, StringFormat={}{0:F0}%}" 
                                           Style="{StaticResource MonospaceValue}"
                                           FontSize="18"
                                           Foreground="{StaticResource AccentBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="GPU" 
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding LatestMonitoringSample.GpuLoadPercent, StringFormat={}{0:F0}%}" 
                                           Style="{StaticResource MonospaceValue}"
                                           FontSize="18"
                                           Foreground="#45C7FF"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <controls:LoadChart Samples="{Binding MonitoringSamples}" 
                                        Height="200"/>
                </StackPanel>
            </Border>

            <!-- CPU Clock Details -->
            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource SurfaceCard}" Padding="20" Margin="10,10,0,0">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                        <Path Data="{StaticResource IconPerformance}" Width="16" Height="16" 
                              Fill="#FFD700" Stretch="Uniform" Margin="0,0,8,0"/>
                        <TextBlock Text="CPU FREQUENCIES" Style="{StaticResource Label}"/>
                    </StackPanel>
                    <TextBlock Text="{Binding CpuClockSummary}" 
                               Style="{StaticResource MonospaceValue}"
                               FontSize="13"
                               FontWeight="Normal"
                               Foreground="{StaticResource TextPrimaryBrush}"
                               LineHeight="22"/>
                </StackPanel>
            </Border>

            <!-- GPU Voltage/Current Chart -->
            <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource SurfaceCard}" Padding="20" Margin="0,10,10,0">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="âš¡" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="GPU VOLTAGE &amp; CURRENT" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel Margin="0,0,16,0">
                                <TextBlock Text="VOLTAGE" 
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding LatestMonitoringSample.GpuVoltageV, StringFormat={}{0:F2}V, FallbackValue=--V}" 
                                           Style="{StaticResource MonospaceValue}"
                                           FontSize="18"
                                           Foreground="#FF6B6B"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="CURRENT" 
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding LatestMonitoringSample.GpuCurrentA, StringFormat={}{0:F1}A, FallbackValue=--A}" 
                                           Style="{StaticResource MonospaceValue}"
                                           FontSize="18"
                                           Foreground="#4CAF50"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <controls:GpuVcChart Samples="{Binding MonitoringSamples}" 
                                          Height="200"/>
                </StackPanel>
            </Border>

            <!-- Fan Curve Chart -->
            <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource SurfaceCard}" Padding="20" Margin="10,10,0,0">
                <StackPanel>
                    <Grid Margin="0,0,0,16">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ’¨" FontSize="14" Margin="0,0,8,0"/>
                            <TextBlock Text="FAN CURVE" Style="{StaticResource Label}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <StackPanel Margin="0,0,16,0">
                                <TextBlock Text="CPU FAN" 
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding FanCurvePoints, Converter={StaticResource LatestFanSpeedConverter}, ConverterParameter=cpu, FallbackValue=-- RPM}" 
                                           Style="{StaticResource MonospaceValue}"
                                           FontSize="16"
                                           Foreground="{StaticResource AccentBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="GPU FAN" 
                                           FontSize="10" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextTertiaryBrush}"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding FanCurvePoints, Converter={StaticResource LatestFanSpeedConverter}, ConverterParameter=gpu, FallbackValue=-- RPM}" 
                                           Style="{StaticResource MonospaceValue}"
                                           FontSize="16"
                                           Foreground="#45C7FF"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <controls:FanCurveChart Points="{Binding FanCurvePoints}" 
                                             Height="200"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Low Overhead Message -->
        <Border Grid.Row="4" 
                Style="{StaticResource SurfaceCard}" 
                Padding="48" 
                Visibility="{Binding MonitoringLowOverheadMode, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Path Data="{StaticResource IconPerformance}" 
                      Width="48" Height="48" 
                      Fill="{StaticResource AccentBrush}" 
                      Stretch="Uniform"
                      HorizontalAlignment="Center" 
                      Margin="0,0,0,16"/>
                <TextBlock Text="Reduced CPU Usage Mode" 
                           Style="{StaticResource Heading2}"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,8"/>
                <TextBlock Text="Live charts are disabled to minimize monitoring overhead." 
                           Style="{StaticResource Caption}"
                           FontSize="14"
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"
                           Margin="0,0,0,4"/>
                <TextBlock Text="Hardware summary information is still available above." 
                           Style="{StaticResource Caption}"
                           FontSize="14"
                           HorizontalAlignment="Center" 
                           TextAlignment="Center"/>
            </StackPanel>
        </Border>
        
            <!-- Loading Overlay -->
            <controls:LoadingOverlay Grid.RowSpan="5" Panel.ZIndex="1000" />
        </Grid>
    </ScrollViewer>
</UserControl>
